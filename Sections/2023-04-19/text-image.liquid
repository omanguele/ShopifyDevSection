<style>
  #imagetext200423 {
      width: 100%;
      height: auto;
      position: relative;
      background-color: {{ section.settings.bg_color }};
      color: {{ section.settings.text_color }} !important;
      padding: 40px 10px;
      text-align: left;
  }
  #imagetext200423 .container {
      max-width: 1400px;
      margin: 0 auto;
      display: flex;
      align-items: stretch;
      justify-content: center;
      flex-direction: row;
      gap: 80px;
  }
  #imagetext200423  .t_image,
  #imagetext200423  .d_text {
      width: 50%;
  }
  #imagetext200423  .d_text {
      display: flex;
      align-items: flex-start;
      justify-content: flex-start;
      padding: 40px 0;
  }
  #imagetext200423  .t_image {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
  }
  #imagetext200423  .d_text span {
      display: block;
  }
  #imagetext200423  .t_image img{
      max-width: 100%;
      margin-top: 20px;
  }
  #imagetext200423  .title {
      width: 100%;
      text-align: left;
      font-weight: 600;
      font-style: italic;
      line-height: 1.2;
      color: #000;
      font-size: 20px;
  }
  @media only screen and (max-width: 1000px) {
      #imagetext200423  .t_image,
      .d_text {
          width: 100%;
      }
      #imagetext200423 .container {
          flex-direction: column;
          gap: 20px;
      }
     #imagetext200423   .d_text span {
          font-size: 12px !important;
      }
     #imagetext200423   .title {
          font-size: 18px;
      }
  }
</style>

<section id="imagetext200423">
  <div class="container">
    <div class="t_image">
      <h3 class="title">{{ section.settings.title }}</h3>
      <img src="{{ section.settings.image | img_url: "master" }}" alt="">
    </div>
    <div class="d_text">
      <span class="desc">
        {{ section.settings.description }}
      </span>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Text Image",
  "settings": [
    {
    "type": "color",
    "id": "bg_color",
    "label": "Couleur de fond",
    "default": "#fff"
  },
  {
    "type": "color",
    "id": "text_color",
    "label": "Couleur de texte",
    "default": "#000"
  },
    {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Titre",
        "default":"Lorem ipsun..."
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      }
  ],
"presets": [
  {
    "name": "Text Image"
  }
]
}
{% endschema %}
