<style>
  
    #shopify-section-{{ section.id }} #gridproductsection180123 div:empty{
      display:block;
    }
    #shopify-section-{{ section.id }} #gridproductsection180123 {
      width: 100%;
      height: 100%;
      padding: 0;
      margin: 0;
      position: static;
      color: {{ section.settings.text-color }};
      font-family: AcherusGrotesque !important;
      font-style: normal;
      font-weight: 400;
      font-size: 1rem;
      line-height: 1.3 !important;
      letter-spacing: -.02em;
      background-repeat: no-repeat;
    }
    #shopify-section-{{ section.id }} #gridproductsection180123 .container {
      max-width: 100%;
      margin: auto;
    }
    #shopify-section-{{ section.id }} #gridproductsection180123 .banner {
      background-color: {{ section.settings.bg-color }};
      display: flex;
      border-radius: 0;
      flex-direction: column;
      overflow: hidden;
    }
    #shopify-section-{{ section.id }} #gridproductsection180123 .banner .banner-left {
      padding: 30px 30px 0 30px;
      display: flex;
      text-align: center;
      align-items: center;
      justify-content: center;
      flex-direction: column;
    }
  
    #shopify-section-{{ section.id }} #gridproductsection180123 .banner .banner-right {
      background-image: url({{ section.settings.right-image | img_url:"master" }});
      background-size: cover;
      background-position: 50%;
      height: 150px;
      width: calc(100% + 40px);
      margin-left: -20px;
      display: flex;
    }
    #shopify-section-{{ section.id }} #gridproductsection180123 .banner .banner-left .gps-logo {
      height: 30px;
      object-fit: cover;
    }
    #shopify-section-{{ section.id }} #gridproductsection180123 .banner .banner-left .title {
      font-size: 1.5rem;
      font-weight: 900 !important;
      font-style: normal;
      color: {{ section.settings.title-color }};
    }
    #shopify-section-{{ section.id }} #gridproductsection180123 .banner .banner-left .subtitle {
      color: {{ section.settings.subtitle-color }};
    }
    @media only screen and (min-width: 768px) {
        #shopify-section-{{ section.id }} #gridproductsection180123  .container {
            max-width: 872px;
            padding: 20px;
        }
        #shopify-section-{{ section.id }} #gridproductsection180123  .banner {
            border-radius: 10px;
            flex-direction: row;
        }
    
        #shopify-section-{{ section.id }} #gridproductsection180123  .banner  .banner-left{
            padding: 60px 0 60px 40px;
            text-align: left;
            align-items: flex-start;
            justify-content: flex-start;
    
        }
        
        #shopify-section-{{ section.id }} #gridproductsection180123  .banner  .banner-right {
            height: inherit;
            flex: 0 0 500px !important;
            width: 372px;
        }
    }
  </style>
  <section id="gridproductsection180123">
    <div class="container">
      <div class="banner">
          <div class="banner-left">
              <img src="{{ section.settings.logo | img_url:"master" }}" class="gps-logo" alt="">
              <h2 class="title">{{ section.settings.title }}</h2>
              <span class="subtitle">{{ section.settings.subtitle }}</span>
          </div>
          <div class="banner-right"></div>
      </div>
    </div>
  </section>
  {% schema %}
    {
      "name": "Text Image Section",
      "settings": [
        {
          "type":"color",
          "id":"bg-color",
          "label":"Couleur de fond",
          "default":"#93c564"
        },
        {
          "type":"color",
          "id":"title-color",
          "label":"Couleur de titre",
          "default":"#000"
        },
        {
          "type":"color",
          "id":"subtitle-color",
          "label":"Couleur de sous-titre",
          "default":"#000"
        },
        {
          "type":"image_picker",
          "id":"logo",
          "label":"Logo"
        },
        {
          "type":"image_picker",
          "id":"right-image",
          "label":"Image de droite"
        },
        {
          "type":"text",
          "id":"title",
          "label":"Titre",
          "default":"Step-by-step guides"
        },
        {
          "type":"textarea",
          "id":"subtitle",
          "label":"Sous-titre",
          "default":"Pick your kit. Then type in the password that's on the back of the card in your kit."
        }
      ],
      "presets": [
        {
          "name": "Text Image Section",
          "category": "Custom Ss"
        }
      ]
    }
  {% endschema %}