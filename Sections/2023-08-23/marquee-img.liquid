<style>
  #shopify-section-{{ section.id }} #marqueeimg283223094 .marqueeimg283223094_heading {
      color: {{ section.settings.text_color }};
      font-size: 24px;
      text-align: center;
      padding: 24px 0;
  }
  #shopify-section-{{ section.id }} #marqueeimg283223094 {
      width: 100%;
      position: relative;
      background-color: {{ section.settings.bg_color }};
      white-space: nowrap;
      overflow: hidden;
  }
  #shopify-section-{{ section.id }} #marqueeimg283223094 .marqueeimg283223094_item {
      display: inline-flex;
      animation: Scroll 5s forwards linear infinite;
      align-items: center;
      flex-shrink: 0;
  }
  #shopify-section-{{ section.id }} #marqueeimg283223094 .marqueeimg283223094_img {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0 24px;
  }
  #shopify-section-{{ section.id }} #marqueeimg283223094 .marqueeimg283223094_img  img {
      max-width: 100%;
      min-width: 100px;
      width: 87px;
      height: auto;
      display: block;
  }
  @media(max-width: 740px) {
     #shopify-section-{{ section.id }} #marqueeimg283223094 .marqueeimg283223094_heading {
          font-size: 16px;
          padding: 20px;
      }
  }
  @keyframes Scroll{0%{transform:translate(0)}to{transform:translate(-100%)}}
</style>

<section id="marqueeimg283223094">
  <div class="marqueeimg283223094_heading">
    <strong>{{ section.settings.heading }}</strong>
  </div>
  {%- for i in (1..4) -%}
    <div class="marqueeimg283223094_item">
      {%- for block in section.blocks -%}
        <div class="marqueeimg283223094_img">
          <img src="{{ block.settings.image | img_url: "master" }}" alt="">
        </div>
      {% endfor %}
    </div>
  {% endfor %}
</section>

{% schema %}
{
  "name": "Marquee Img",
  "blocks": [
    {
    "type": "image",
    "name": "Image",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ]
  }
  ],
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Couleur du fond de la section",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur texte",
      "default": "#3200b2"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Nous contacter !"
    }
  ],
  "presets": [
    {
      "name": "Marquee Img"
    }
  ]
}
{% endschema %}
