<style>
   #shopify-section-{{ section.id }} #bgcardboms85250314 {
       width: 100%;
       position: relative;
       background-color: {{ section.settings.bg_color }};
   }
   #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_header {
       padding: 40px 16px;
       width: 100%;
       display: flex;
       justify-content: center;
       align-items: center;
   }
   #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_header h2 {
       font-size: 60px;
       text-transform: uppercase;
       text-align: center;
       font-weight: 700;
       letter-spacing: 0;
       line-height: 90%;
       color: {{ section.settings.hl_color }};
       padding-top: 0;
   }
   #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_container {
       margin-top: 40px;
       padding: 40px 128px;
       width: 100%;
       display: flex;
       justify-content: center;
       align-items: center;
       position: relative;
       background-image: url({{ section.settings.bg_image | img_url: "master" }});
   }
   #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_content {
       width: 100%;
       max-width: 1400px;
       padding: 40px;
       background-color: {{ section.settings.card_color }};
       margin: 0 auto;
       position: relative;
       overflow: hidden;
   }
   #shopify-section-{{ section.id }} #bgcardboms85250314  .swiper {
       width: 100%;
       height: 100%;
   }
   #shopify-section-{{ section.id }} #bgcardboms85250314  .swiper-slide {
       width: 100%;
       height: 100%;
   }
   #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_item {
       width: 100%;
       padding: 0 24px;
       display: flex;
       justify-content: center;
       align-items: center;
       flex-direction: column;
   }
   #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_item_nb {
       background-color: {{ section.settings.hl_color }};
       color: {{ section.settings.card_color }};
       margin-bottom: 24px;
       font-size: 20px;
       border-radius: 50%;
       width: 32px;
       height: 32px;
       display: flex;
       justify-content: center;
       align-items: center;
   }
   #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_item_heading {
       color: {{ section.settings.hl_color }};
       font-size: 32px;
       text-transform: uppercase;
       font-weight: 700;
       text-align: center;
       line-height: 48px;
   }
   #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_item_text {
       padding-top: 16px;
       text-align: center;
       line-height: 24px;
       font-size: 16px;
       color: {{ section.settings.text_color }};
   }
   #shopify-section-{{ section.id }} #bgcardboms85250314  .swiper-button-prev::after,
   #shopify-section-{{ section.id }} #bgcardboms85250314  .swiper-button-next::after {
       font-size: 25px !important;
       color: {{ section.settings.hl_color }} !important;
   }
  #shopify-section-{{ section.id }} #bgcardboms85250314 .swiper-button-disabled {
       opacity: 0 !important;
   }
   @media (max-width: 740px) {
       #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_header {
           padding: 16px;
       }
       #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_header h2 {
           font-size: 32px;
           padding-top: 16px;
       }
       #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_container {
           padding: 20px;
       }
       #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_item {
           padding: 40px 24px 64px 24px;
       }
       #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_item_nb  {
           margin-bottom: 12px;
       }
       #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_item_heading {
           font-size: 20px;
           line-height: 30px;
       }
       #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_item_text {
           font-size: 14px ;
       }
       #shopify-section-{{ section.id }} #bgcardboms85250314 .bgcardboms85250314_content {
           padding: 0;
       }
   }
</style>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"
>

<section id="bgcardboms85250314">
  <div class="bgcardboms85250314_header">
    <h2>{{ section.settings.heading }}</h2>
  </div>
  <div class="bgcardboms85250314_container">
    <div class="bgcardboms85250314_content">
      <div class="swiper bgcardboms85250314-swiper">
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
            <div class="swiper-slide">
              <div class="bgcardboms85250314_item">
                <div class="bgcardboms85250314_item_nb">{{ forloop.index }}</div>
                <div class="bgcardboms85250314_item_heading">
                  {{ block.settings.heading }}
                </div>
                <div class="bgcardboms85250314_item_text">
                  {{ block.settings.text }}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
    </div>
  </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
<script>
  new Swiper('.bgcardboms85250314-swiper', {
      navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
      },
      slidesPerView: 1,
      spaceBetween: 0,

      breakpoints: {
          320: {
          slidesPerView: 1,
          spaceBetween: 0
          },
          1024: {
          slidesPerView: 4,
          spaceBetween: 0
          }
      }
  });
</script>

{% schema %}
{
  "name": "Bg Card",
  "blocks": [
      {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "heading",
          "default": "créez <br>votre néon"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Texte",
          "default": "Créez votre propre néon avec notre app ou envoyez-nous votre design."
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Bg Image"
    },
    {
      "type": "color",
      "id": "card_color",
      "label": "Card Color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Couleur du fond de la section",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "hl_color",
      "label": "Couleur HL",
      "default": "#3200b2"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur texte",
      "default": "#000"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Nous contacter !"
    }
  ],
  "presets": [
    {
      "name": "Bg Card"
    }
  ]
}
{% endschema %}
