                    <p>
                        <span>
                            {{ section.settings.dropdown-title }}
                        </span>
                        <span class="icons_wrapper">
                            <svg class="icon icon--chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M19 9l-7 7-7-7" stroke-linecap="round" stroke-linejoin="round" stroke-width="1"></path>
                            </svg>
                        </span>
                    </p>
                </div>
