  <script type="text/javascript">
        let dropdown = document.querySelector('#presentprdtsection100223 .dropdown_elt');
        let tooltips = document.querySelectorAll('#presentprdtsection100223 .tooltips');
  
        dropdown.querySelector('.dropdown_trigger').addEventListener('click', function(e) {
            e.preventDefault();
            let dropContent = dropdown.querySelector('.dropdown_container');
            if(dropdown.classList.contains('active')){
                dropContent.style.height =  '0px';
                dropdown.classList.remove('active');
            }else{
                dropContent.style.height = dropContent.scrollHeight + 'px';
                dropdown.classList.add('active');
            }
        });
  
        tooltips.forEach((tooltip) => {
            tooltip.addEventListener('mouseover', function(e) {
                e.preventDefault();
                tooltip.classList.add('show');
            })
        });
  
        tooltips.forEach((tooltip) => {
            tooltip.addEventListener('mouseout', function(e) {
                e.preventDefault();
                tooltip.classList.remove('show');
            })
        });
        tooltips.forEach((el, index) => {
        
        })
    </script>
