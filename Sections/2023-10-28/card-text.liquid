<style>

  #shopify-section-{{ section.id }} #cardtextbtn7541320132 {
      padding: 80px 40px;
      width: 100%;
      position: relative;
    background: {{ section.settings.bg_color }};
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_container {
      display: flex;
      justify-content: space-between;
      width: 100%;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_right {
      max-width: 446px;
      align-items: flex-end;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      flex-basis: 40%;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_left {
      flex-basis: 60%;
      display: flex;
      flex-direction: column;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_cards {
      max-width: 762px;
      scrollbar-width: none;
      scroll-snap-type: x mandatory;
      overflow-x: auto;
      width: 100%;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_cards_content {
      overflow-x: auto;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      grid-auto-flow: column;
      display: grid;
      min-width: min-content;
      column-gap: 20px;
      margin: 0 16px;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_card {
      width: auto;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_card a{
      position: relative;
      aspect-ratio: 4/5;
      display: block;
      text-decoration: none;
      color: inherit;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_card_content {
      border-radius: 16px;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: clip;
      aspect-ratio: 4/5;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_card_content::before {
      content: " ";
      position: absolute;
      top: 0;
      left: 0;
      z-index: 10;
      display: block;
      height: 100%;
      width: 100%;
      border-radius: 8px;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_card_image {
      aspect-ratio: 4/5 !important;
      padding-left: 0;
      object-fit: cover;
      border-radius: 16px;
      padding-right: 0;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_card_image img {
      max-width: 100%;
      display: block;
      aspect-ratio: inherit !important;
      width: 100%;
      object-fit: cover;
      height: auto;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_card_text {
      padding: 16px;
      width: 100%;
      bottom: 0;
      left: 0;
      justify-content: space-between;
      display: flex;
      align-items: flex-end;
      position: absolute;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_card_text h3 {
      text-transform: uppercase;
      font-size: 24px;
      line-height: 32px;
      color: {{ section.settings.text_color }};
      font-weight: 700;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_card_text button {
      width: 34px;
      height: 34px;
      border: 1px solid {{ section.settings.card_btn_border_color }};
      background-color: {{ section.settings.card_btn_bg_color }};
      color: {{ section.settings.card_btn_text_color }};
      border-radius: 9999px;
      display: inline-flex;
      align-items: center;
      gap: 10px;
      cursor: pointer;
      justify-content: center;
      flex-shrink: 0;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_card_text button svg {
      height: 20px;
      width: 20px;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_right h2 {
      line-height: 64px;
      text-transform: uppercase;
      font-weight: 700;
      font-size: 60px;
      color: {{ section.settings.title_color }};
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_right a {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      font-size: 16px;
      line-height: 24px;
      font-weight: 700;
      border-radius: 9999px;
      text-decoration: none;
      margin-top: 24px;
      border: 1px solid {{ section.settings.btn_border_color }};
      background-color: {{ section.settings.btn_bg_color }};
      color: {{ section.settings.btn_text_color }};
      padding: 8px 20px 8px 20px;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_right a svg {
      height: 20px;
      width: 20px;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_left_head {
      display: none;
      padding: 0 16px;
      margin-bottom: 20px;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_left_head h2 {
      line-height: 36px;
      font-size: 32px;
      text-transform: uppercase;
      color: {{ section.settings.title_color }};
      width: 75%;
      font-weight: 700;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_left_link {
      display: none;
      padding: 0px 16px;
      margin-top: 28px;
  }
  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_left_link a {
      text-decoration-line: underline;
      color: {{ section.settings.btn_text_color }};
      font-size: 16px;
      line-height: 24px;
      padding: 8px 0px 8px 0;
      display: inline-flex;
      align-items: center;
      gap: 10px;
  }

  #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_left_link a svg {
      height: 20px;
      width: 20px;
  }

  @media only screen and (max-width: 780px)  {
      #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_left_link {
          display: block;
      }
      #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_left_head {
          display: block;
      }
      #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_cards_content {
          grid-template-columns: none;
      }
      #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_right {
          display: none;
      }
      #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_left {
          flex-basis: 100%;
      }
      #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_card {
          width: 72vw;
      }
      #shopify-section-{{ section.id }} #cardtextbtn7541320132 {
          padding: 40px 0px;
      }
      #shopify-section-{{ section.id }} #cardtextbtn7541320132 .cardtextbtn7541320132_container {
          display: block;
      }
  }
</style>

<section id="cardtextbtn7541320132">
  <div class="cardtextbtn7541320132_container">
    <div class="cardtextbtn7541320132_left">
      <div class="cardtextbtn7541320132_left_head">
        <h2>{{ section.settings.title }}</h2>
      </div>

      <div class="cardtextbtn7541320132_cards">
        <div class="cardtextbtn7541320132_cards_content">
          {% for block in section.blocks %}
            <div class="cardtextbtn7541320132_card">
              <a href="{{ block.settings.url }}">
                <div class="cardtextbtn7541320132_card_content">
                  <div class="cardtextbtn7541320132_card_image">
                    <img src="{{ block.settings.image | img_url: "master" }}" alt="">
                  </div>
                  <div class="cardtextbtn7541320132_card_text">
                    <h3>{{ block.settings.text }}</h3>
                    <button type="button">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                      >
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
                      </svg>
                    </button>
                  </div>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      </div>

      <div class="cardtextbtn7541320132_left_link">
        <a href="{{ section.settings.url_link }}">
          <span>{{ section.settings.text_link }}</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
          </svg>
        </a>
      </div>
    </div>
    <div class="cardtextbtn7541320132_right">
      <h2>{{ section.settings.title }}</h2>
      <a href="{{ section.settings.url_link }}">
        <span>{{ section.settings.text_link }}</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

