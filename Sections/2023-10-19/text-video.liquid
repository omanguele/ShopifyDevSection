        #shopify-section-{{ section.id }} #textytnvideo9260810132 {
            width: 100%;
            position: relative;
            padding: {{ section.settings.desktop_top_spacing }}px {{ section.settings.desktop_left_spacing }}px {{ section.settings.desktop_bottom_spacing }}px {{ section.settings.desktop_right_spacing }}px;
            background-color: {{ section.settings.bg_color }};
        }
        #shopify-section-{{ section.id }} #textytnvideo9260810132  .textytnvideo9260810132_container {
            max-width: {% if section.settings.full_with %} 100% {% else %} {{ section.settings.max_width }}px {% endif %};
            width: 100%;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        #shopify-section-{{ section.id }} #textytnvideo9260810132  .textytnvideo9260810132_content {
            margin-left: 0;
            margin-right: -60px;
            z-index: 1;
            border-radius: {{ section.settings.radius }}px;
            background-color: {{ section.settings.card_color }};
            max-width: 350px;
            width: 100%;
            padding: 80px 30px;
            transform: unset;
            opacity: 1;
            transition-property: transform;
            transition-duration: 1s;
            transition-timing-function: ease;
            text-align: left;
        }
        #shopify-section-{{ section.id }} #textytnvideo9260810132  .textytnvideo9260810132_heading {
            font-style: italic;
            letter-spacing: .33px;
            line-height: 1;
            margin-top: 0;
            font-weight: 700;
            text-transform: uppercase;
          color: {{ section.settings.text_color }};
          font-size: {{ section.settings.t_title }}px;
        }
        #shopify-section-{{ section.id }} #textytnvideo9260810132  .textytnvideo9260810132_description {
            margin-top: 25px;
            line-height: 1.7;
            color: {{ section.settings.text_color }};
          font-size: {{ section.settings.t_text }}px;
        }
        #shopify-section-{{ section.id }} #textytnvideo9260810132  .textytnvideo9260810132_link {
            font-weight: 700;
            text-decoration: underline;
            color: {{ section.settings.text_color }};
          font-size: {{ section.settings.t_btn }}px;
            cursor: pointer;
            display: block;
            margin-top: 30px;
        }
        #shopify-section-{{ section.id }} #textytnvideo9260810132  .textytnvideo9260810132_video {
            border-radius: {{ section.settings.radius }}px;
            max-width: calc(100% - 290px);
            width: 100%;
            overflow: hidden;
        }
        #shopify-section-{{ section.id }} #textytnvideo9260810132  .textytnvideo9260810132_video_container {
            position: relative;
            aspect-ratio: 16/9;
        }
        #shopify-section-{{ section.id }} #textytnvideo9260810132  .textytnvideo9260810132_video_container video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        @media only screen and (max-width: 780px)  {
            #shopify-section-{{ section.id }} #textytnvideo9260810132 {
                padding: 0;
            }
            #shopify-section-{{ section.id }} #textytnvideo9260810132  .textytnvideo9260810132_container {
                flex-direction: column-reverse;
                justify-content: center;
            }
            #shopify-section-{{ section.id }} #textytnvideo9260810132  .textytnvideo9260810132_content {
                margin-left: auto;
                margin-right: auto;
                margin-top: -30px;
                max-width: 440px;
                text-align: center;
                padding: 30px 20px 40px;
                width: calc(100% - 30px);
            }
            #shopify-section-{{ section.id }} #textytnvideo9260810132  .textytnvideo9260810132_video {
                border-radius: 0px;
                max-width: 100%;
                margin-bottom: -5px;
            }
            #shopify-section-{{ section.id }} #textytnvideo9260810132  .textytnvideo9260810132_video_container {
                aspect-ratio: 4/5;
            }
            #shopify-section-{{ section.id }} #textytnvideo9260810132  .textytnvideo9260810132_heading {
                font-size: {{ section.settings.m_title }}px;
            }
            #shopify-section-{{ section.id }} #textytnvideo9260810132  .textytnvideo9260810132_description {
                padding-left: 15px;
                padding-right: 15px;
              font-size: {{ section.settings.m_text }}px;
            }
          #shopify-section-{{ section.id }} #textytnvideo9260810132  .textytnvideo9260810132_link {
            font-size: {{ section.settings.m_btn }}px;
        }
        }
</style>

<section
