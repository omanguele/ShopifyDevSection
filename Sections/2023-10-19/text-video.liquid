  id="textytnvideo9260810132"
>
  <div class="textytnvideo9260810132_container {{ section.settings.sh_image }}">
    <div class="textytnvideo9260810132_content">
      <h2 class="textytnvideo9260810132_heading">{{ section.settings.title }}</h2>
      <p class="textytnvideo9260810132_description">
        {{ section.settings.subtitle }}
      </p>
      <a href="{{ section.settings.url_link }}" class="textytnvideo9260810132_link">{{ section.settings.text_link }}</a>
    </div>
    <div class="textytnvideo9260810132_video">
      <div class="textytnvideo9260810132_video_container">
        <video
          src="{{ section.settings.video.sources[1].url  }}"
          autoplay=""
          loop=""
          muted="muted"
          playsinline=""
        ></video>
      </div>
    </div>
  </div>
</section>

