        },
        {
          "type":"color",
          "id":"input-bg-color",
          "label":"Couleur de fond champ de saisir",
          "default":"#fff"
        },
        {
          "type":"color",
          "id":"btn-bg-color",
          "label":"Couleur de fond bouton",
          "default":"#3b82f6"
        },
        {
