<style>
  #shopify-section-{{ section.id }} #simpleslider0401610132 {
      width: 100%;
      position: relative;
      overflow-x: scroll;
      overflow-y: hidden;
      scrollbar-width: none;
      width: -moz-fit-content;
      max-width: 100vw;
      display: grid;
      grid-auto-flow: column;
      grid-auto-columns: 1fr;
      text-transform: uppercase;
  }
  #shopify-section-{{ section.id }} #simpleslider0401610132 .simpleslider0401610132_card {
      width: calc(100vw/13*3);
      height: -moz-fit-content;
      display: grid;
      grid-auto-rows: 1fr min-content;
      color: inherit;
      text-decoration: none;
      cursor: pointer;
      margin-right: -1px;
  }
  #shopify-section-{{ section.id }} #simpleslider0401610132 .simpleslider0401610132_image {
      position: relative;
      width: 100%;
      height: 100%;
      grid-area: 1 / -1;
  }
  #shopify-section-{{ section.id }} #simpleslider0401610132 .simpleslider0401610132_image img {
      user-select: none;
      display: block;
      width: 100%;
      object-fit: cover;
      height: calc(100vw/13*3/3*4);
      font-size: 0;
  }
  #shopify-section-{{ section.id }} #simpleslider0401610132 .simpleslider0401610132_text {
      text-transform: uppercase;
      width: 100%;
      padding: 11px 15px 30px 15px;
      font-size: 14px;
      color: {{ section.settings.text_color }};
  }
  @media only screen and (max-width: 1204px) {
      #shopify-section-{{ section.id }} #simpleslider0401610132 .simpleslider0401610132_card {
          width: calc(100vw/10*3);
      }
      #shopify-section-{{ section.id }} #simpleslider0401610132 .simpleslider0401610132_image img {
          height: calc(100vw/3*4);
      }
  }
  @media only screen and (max-width: 1180px) {
      #shopify-section-{{ section.id }} #simpleslider0401610132 .simpleslider0401610132_card {
          width: calc(100vw/7*3);
      }
      #shopify-section-{{ section.id }} #simpleslider0401610132 .simpleslider0401610132_image img {
          height: calc(100vw/7*3/3*4);
      }
  }
  @media only screen and (max-width: 834px) {
      #shopify-section-{{ section.id }} #simpleslider0401610132 .simpleslider0401610132_card {
          width: 80vw;
      }
      #shopify-section-{{ section.id }} #simpleslider0401610132 .simpleslider0401610132_image img {
          height: calc(80vw/3*4);
      }
  }
</style>

<section id="simpleslider0401610132">
  {% for block in section.blocks %}
    <a href="{{ block.settings.url }}" class="simpleslider0401610132_card">
      <div class="simpleslider0401610132_image">
        <img src="{{ block.settings.image | img_url: "master" }}" alt="">
      </div>
      <div class="simpleslider0401610132_text">
        <span>{{ block.settings.text }}</span>
      </div>
    </a>
  {% endfor %}
</section>

{% schema %}
{
  "name": "Main Blog V2",
    "blocks": [
      {
      "type": "item",
      "name": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Texte"
        },
        {
          "type": "url",
          "id": "url",
          "label": "lien"
        }
      ]
    }
  ],
  "settings": [
    {
    "type": "color",
    "id": "text_color",
    "label": "Couleur de texte",
    "default": "#000"
  }
  ],
  "presets": [
  {
    "name": "Main Blog V2"
  }
]
}
{% endschema %}
