{% assign rate = 0 %}
{% assign nb = 0 %}
{% for block in section.blocks %}
  {% assign rate = rate | plus: block.settings.nb_stars %}
  {% assign nb = nb | plus: 1.0 %}
{% endfor %}
<style>
  #rate230412 {
      width: 100%;
      height: 100%;
      padding: 40px 20px;
      color: {{ section.settings.text_color }};
  }
  #rate230412 .container {
      max-width: 90%;
      width: 100%;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
  }
  #rate230412 .title {
      font-size: 32px;
      font-weight: bold;
      color: {{ section.settings.title_color }};
      text-align: center;
  }
  #rate230412 .wrapper {
      margin-top: 50px;
      width: 100%;
      display: flex;
      flew-wrap: wrap;
      flex-direction: row;
      border-radius: 20px;
      background-color: {{ section.settings.bg_color }};
      padding: 50px;
  }
  #rate230412 a {
      text-decoration: none;
      color: {{ section.settings.text_color }};
  }
  #rate230412 .wrapper .card {
      width: 100%;
      display: flex;
      justify-content: flex-start;
      flex-direction: column;
      align-items: flex-start;
      text-align: left;
      width: 100%;
      margin-right: 20px;
  }
  #rate230412 .wrapper .overview {
      justify-content: flex-start;
      flex-direction: column;
      align-items: flex-start;
      display: flex;
      width: 40%;
  }
  #rate230412 .wrapper .overview img {
      max-width: 100%;
      height: 50px;
      object-fit: contain;
      margin-top: 10px;
  }
  #rate230412 .stars {
      margin: 20px 0;
      display: flex;
      align-items: center;
      gap: 10px;
      color: {{ section.settings.star_color }}
  }
  #rate230412 .stars svg{
      width: 20px;
      height: 20px;
  }
  #rate230412 .link {
      font-size: 16px;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 5px;
      margin-top: 20px;
  }
  #rate230412 .link svg{
      width: 18px;
      height: 18px;
      margin-top: 4px;
  }
  #rate230412 .card  .desc {
      line-height: 1.6;
      font-size: 16px;
      font-weight: 500;
      color: {{ section.settings.text_color }};
  }
  #rate230412 .card  .card_title {
      color: {{ section.settings.text_color }};
      line-height: 1.2;
      font-size: 20px;
      font-weight: 500;
  }

  #rate230412 .rate {
      font-size: 60px;
      font-weight: bold;
      color: {{ section.settings.text_color }};
  }
  #rate230412 .overview .desc {
      flex-grow: 1;
      display: flex;
      align-items: flex-end;
      justify-content: flex-end;
      text-decoration: underline;
      color: {{ section.settings.text_color }};
  }

  #rate230412 .swiper {
    width: 60%;
  }
  @media only screen and (max-width: 1024px) {
    #rate230412 .rate {
          font-size: 50px;
          font-weight: bold;
      }
  }
  @media only screen and (max-width: 780px) {
      #rate230412 .container {
          max-width: 100%;
      }
      #rate230412 .swiper {
        width: 100%;
        margin-top: 10px;
      }
      #rate230412 .title {
          font-size: 20px;
      }
      #rate230412 .wrapper {
          flex-direction: column;
          padding: 30px;
      }
      #rate230412 .card  .desc {
          font-size: 13px;
      }
      #rate230412 .overview .desc {
          margin-top: 10px;
      }
      #rate230412 .card .card_title {
          font-size: 16px;
      }
      #rate230412 .wrapper .card {
          width: 100%;
          margin-right: 0px;
      }
      #rate230412 .wrapper .overview {
          width: 100%;
      }
      #rate230412 .link {
          font-size: 14px;
      }
      #rate230412 .rate {
          font-size: 40px;
          font-weight: bold;
      }
      #rate230412 .stars svg{
          width: 18px;
          height: 18px;
      }
  }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css">

<section id="rate230412">
  <div class="container">
    <h3 class="title">{{ section.settings.title }}</h3>
    <div class="wrapper">
      <div class="overview">
        <h3 class="rate">{{ rate | divided_by: nb }} / 5</h3>
        <a href="{{ section.settings.link_url }}" class="link">
          <span>{{ section.settings.link_lib }}</span>
        </a>
        <img src="{{ section.settings.image | image_url: "master" }}" class="rate_image" alt="">
        <div class="desc">{{ section.settings.min_desc }}</div>
      </div>
      <div class="swiper mySwiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
            <div class="card">
              <h4 class="card_title">{{ block.settings.name }}</h4>
              <div class="stars">
                {% for i in (1..block.settings.nb_stars) %}
                  <span>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="">
                      <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                    </svg>
                  </span>
                {% endfor %}
              </div>
              <p class="desc">
                {{ block.settings.message }}
              </p>
              <a href="{{ block.settings.link_url }}" class="link">
                <span>{{ block.settings.link_lib }}</span>
                <span>
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                    <path fill-rule="evenodd" d="M16.28 11.47a.75.75 0 010 1.06l-7.5 7.5a.75.75 0 01-1.06-1.06L14.69 12 7.72 5.03a.75.75 0 011.06-1.06l7.5 7.5z" clip-rule="evenodd" />
                  </svg>
                </span>
              </a>
            </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
<script>
  const mySwiper = new Swiper('.swiper', {
  autoplay: {
    delay: 5000,
  },
  breakpoints: {
      300: {
          slidesPerView: 1,
          spaceBetween: 50,
      },
      500: {
          slidesPerView: 1,
          spaceBetween: 30,
      },
      780: {
          slidesPerView: 2,
          spaceBetween: 60,
      },
      1024: {
          slidesPerView: 2,
          spaceBetween: 30,
      },
  },

  scrollbar: {
      el: '.swiper-scrollbar',
  },
  });
</script>

