<style>

  #shopify-section-{{ section.id }} #gridcard0290310823 {
      width: 100%;
      position: relative;
      background-color: {{ section.settings.bg_color }};
  }

  #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_container {
      padding: 70px 44px;
      width: 100%;
      max-width: 1440px;
      margin: 0 auto;
  }
  #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_head {
      text-align: center;
      padding: 0 0 32px;
      margin: 0 auto;
      max-width: 840px;
  }
  #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_heading {
      font-size: 58px;
      margin: 0 auto;
      text-align: center;
      padding: 0 0 16px;
      color: {{ section.settings.text_color }};
      font-weight: 300;
  }
   #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_heading strong {
      font-style: normal;
      font-weight: 700;
      font-size: 42px;
      line-height: .9;
      text-transform: uppercase;
   }
   #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_description {
      margin: 18px 0;
      font-size: 18px;
      text-align: center;
      color: {{ section.settings.text_color }};
   }
   #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_description strong {
      font-size: 16px;
      text-transform: uppercase;
   }
   #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_wrapper {
      display: grid;
      grid-template-columns: repeat({{ section.settings.nb_item }},1fr);
      align-items: stretch;
      gap: 10px;
   }
   #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_wrap_item {
      background-color: {{ section.settings.card_color }};
      position: relative;
      display: flex;
      border-radius: 22px;
      overflow: hidden;
      color: {{ section.settings.text_color }};
      align-items: stretch;
      padding: 12px;
      gap: 12px;
   }
   #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_image {
      width: 50%;
      height: 100%;
      border-radius: 18px;
      overflow: hidden;
   }
   #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_image img {
      max-width: 100%;
      width: 100%;
      height: 100%;
      display: block;
      object-fit: cover;
   }
   #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_content {
      display: block;
      width: 60%;
      color: inherit;
      text-decoration: none;
   }
   #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_content_heading {
      margin: 16px 0;
      text-align: left;
      font-size: 16px;
       color: {{ section.settings.text_color }};
   }
   #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_content_description {
      text-align: left;
      margin: 16px 0;
      font-size: 16px;
       color: {{ section.settings.text_color }};
   }
   @media (max-width: 768px) {
      #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_container {
          padding: 40px 10px;
      }
      #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_head {
          padding: 0 0 18px;
      }
      #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_heading {
          font-size: 30px;
      }
      #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_heading  strong {
          font-size: 25px;
      }
      #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_description {
          font-size: 16px;
          max-width: 500px;
          margin: 0 auto;
      }
      #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_description strong {
          font-size: 14px;
      }
      #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_wrapper {
          grid-template-columns: repeat(1,1fr);
      }
      #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_wrap_item {
          padding: 8px;
      }
      #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_content_heading {
          font-size: 14px;
      }
      #shopify-section-{{ section.id }} #gridcard0290310823 .gridcard0290310823_content_description {
          font-size: 14px;
      }
   }
</style>

<section id="gridcard0290310823">
  <div class="gridcard0290310823_container">
    <div class="gridcard0290310823_head">
      <div class="gridcard0290310823_heading">
        {{ section.settings.heading }}
      </div>
      <div class="gridcard0290310823_description">
        {{ section.settings.description }}
      </div>
    </div>
    <div class="gridcard0290310823_wrapper">
      {% for block in section.blocks %}
        <div class="gridcard0290310823_wrap_item">
          <div class="gridcard0290310823_image">
            <img src="{{ block.settings.image | img_url: "master" }}" alt="">
          </div>
          <a href="{{ block.settings.url }}" class="gridcard0290310823_content">
            <div class="gridcard0290310823_content_heading">
              <strong>{{ block.settings.heading }}</strong>
            </div>
            <div class="gridcard0290310823_content_description">
              {{ block.settings.description }}
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Grid Card",
    "blocks": [
    {
    "type": "item",
    "name": "item",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "image"
      },
      {
        "type": "url",
        "id": "url",
        "label": "URL"
      }
    ]
  }
],
    "settings": [
      {
      "type": "color",
      "id": "card_color",
      "label": "Card Couleur",
      "default": "#f2f2f2"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Couleur",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Bg Couleur",
      "default": "#cfcfeb"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "range",
      "id": "nb_item",
      "min": 0,
      "max": 4,
      "step": 1,
      "unit": "c",
      "label": "Nb Item",
      "default": 3
    }
    ],
  "presets": [
    {
      "name": "Grid Card"
    }
  ]
  }
{% endschema %}
