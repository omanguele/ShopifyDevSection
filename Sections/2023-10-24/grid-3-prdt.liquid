<style>
  #shopify-section-{{ section.id }} #gridprdt4311420132 {
      width: 100%;
      position: relative;
      background: {{ section.settings.bg_color }};
      padding: 40px 80px 80px 80px;
  }
  #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_container {
      max-width: 100%;
      width: 100%;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
  }
  #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_heading {
      font-size: 42px;
      font-weight: 700;
      line-height: 52px;
      margin-bottom: 10px;
      color: {{ section.settings.text_color }};
  }
  #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_description {
      font-size: 20px;
      line-height: 32px;
      font-weight: 400;
      color: {{ section.settings.text_color }};
  }
  #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_wrapper {
      width: 100%;
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 80px;
      justify-content: center;
      margin-top: 30px;
  }
  #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_image img {
      display: block;
      width: 100%;
      max-width: 100%;
      height: 100%;
      object-fit: cover;
  }
  #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card {
      width: 100%;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
  }
  #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_content {
      padding: 20px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100%;
  }
  #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_btn {
      display: block;
      background-color: {{ section.settings.btn_bg_color }};
      color: {{ section.settings.btn_text_color }};
      text-decoration: none;
      padding: 10px 20px;
      font-size: 16px;
      font-weight: 600;
      border-radius: 9999px;
      margin-top: 5px;
  }
  #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_rating {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 5px;
  }
  #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_rating  span {
      font-weight: 300;
      font-size: 14px;
  }
  #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_stars {
      display: flex;
      align-items: center;
      gap: 2px;
  }
  #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_stars svg {
      height: 35px;
      width: 35px;
      color: {{ section.settings.text_color }};
  }
  #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_heading {
      margin-top: 20px;
      font-size: 28px;
      font-weight: 700;
      line-height: 32px;
      color: {{ section.settings.text_color }};
  }
  #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_description {
      font-size: 16px;
      font-style: italic;
      line-height: 24px;
      color: {{ section.settings.text_color }};
  }
  #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_price {
      font-size: 25px;
      font-weight: 700;
      line-height: 32px;
      margin-top: 8px;
      color: {{ section.settings.text_color }};
  }
  @media only screen and (max-width: 1200px)  {
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_stars svg {
          height: 30px;
          width: 30px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_wrapper {
          gap: 40px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_heading {
          font-size: 38px;
          line-height: 42px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_description {
          font-size: 18px;
          line-height: 24px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 {
          padding: 40px 60px 60px 60px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_heading {
          font-size: 24px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_description {
          font-size: 16px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_price {
          font-size: 22px;
          line-height: 32px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_btn {
          font-size: 14px;
      }
  }
  @media only screen and (max-width: 1024px)  {
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_stars svg {
          height: 23px;
          width: 23px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_wrapper {
          gap: 20px;
          grid-template-columns: repeat(1, minmax(0, 1fr));
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_heading {
          font-size: 32px;
          line-height: 42px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_description {
          font-size: 16px;
          line-height: 24px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 {
          padding: 40px 20px 40px 20px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_heading {
          font-size: 20px;
          margin-top: 5px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_description {
          font-size: 14px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_price {
          font-size: 18px;
          line-height: 32px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_btn {
          font-size: 12px;
      }
      #shopify-section-{{ section.id }} #gridprdt4311420132 .gridprdt4311420132_card_content {
          padding: 20px 10px;
      }
  }
</style>

<section id="gridprdt4311420132">
  <div class="gridprdt4311420132_container">
    <h2 class="gridprdt4311420132_heading">{{ section.settings.title }}</h2>
    <p class="gridprdt4311420132_description">
      {{ section.settings.subtitle }}
    </p>
    <div class="gridprdt4311420132_wrapper">
      {% for block in section.blocks %}
        <div class="gridprdt4311420132_card" style="background: {{ block.settings.card_color }};">
          <div class="gridprdt4311420132_card_image">
            <img src="{{ block.settings.product.featured_image | product_img_url: "master" }}" alt="">
          </div>
          <div class="gridprdt4311420132_card_content">
            <div class="gridprdt4311420132_card_rating">
              <div class="gridprdt4311420132_card_stars">
                {% for i in (1..block.settings.nb_star) %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                  </svg>
                {% endfor %}
                {% assign rs = 5 | minus: block.settings.nb_star %}
                {% if rs > 0 %}
                  {% for i in (1..rs) %}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                    >
                      <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                    </svg>
                  {% endfor %}
                {% endif %}
              </div>
              <span>{{ block.settings.text }}</span>
            </div>
            <h3 class="gridprdt4311420132_card_heading">{{ block.settings.product.title | escape }}</h3>
            <p class="gridprdt4311420132_card_description">{{ block.settings.description }}</p>
            <p class="gridprdt4311420132_card_price">{{ block.settings.product.price | money }}</p>
            <a href="{{ block.settings.product.url }}" class="gridprdt4311420132_card_btn">
              {{ section.settings.text_btn }}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

