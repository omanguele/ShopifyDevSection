<style>
  #shopify-section-{{ section.id }} #cardsectionxb82131 {
      position: relative;
      width: 100%;
  }
  #shopify-section-{{ section.id }} #cardsectionxb82131  .cardsectionxb82131_container {
      background-color: {{ section.settings.bg_color }};
      width: 100%;
      margin-right: {{ section.settings.mobile_right_spacing }}px;
      margin-left: {{ section.settings.mobile_left_spacing }}px;
      margin-top: {{ section.settings.mobile_top_spacing }}px;
      margin-bottom: {{ section.settings.mobile_bottom_spacing }}px;
      padding: 40px 0;
  }
  #shopify-section-{{ section.id }} #cardsectionxb82131  .cardsectionxb82131_content {
      width: 92%;
      margin: 0 auto;
  }
  #shopify-section-{{ section.id }} #cardsectionxb82131  .cardsectionxb82131_header {
      text-align: center;
  }
  #shopify-section-{{ section.id }} #cardsectionxb82131  .cardsectionxb82131_title {
      color: {{ section.settings.text_color }};
      font-weight: 700;
      font-size: 24px;
      line-height: 32px;
      padding-bottom: 16px;
  }
  #shopify-section-{{ section.id }} #cardsectionxb82131  .cardsectionxb82131_subtitle {
      color: {{ section.settings.text_color }};
      max-width: 600px;
      margin: 0 auto;
      font-size: 14px;
      line-height: 20px;
  }
  #shopify-section-{{ section.id }} #cardsectionxb82131  .cardsectionxb82131_wrapper {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-top: 20px;
      gap: 12px;
  }
  #shopify-section-{{ section.id }} #cardsectionxb82131  .cardsectionxb82131_wrap_item {
      background-color: {{ section.settings.card_color }};
      padding: 20px;
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 8px;
      max-width: 180px;
  }
  #shopify-section-{{ section.id }} #cardsectionxb82131  .cardsectionxb82131_wrap_item a{
      text-decoration: none;
      display: block;
      color: inherit;
  }
  #shopify-section-{{ section.id }} #cardsectionxb82131  .cardsectionxb82131_wrap_item img {
      max-width: 100%;
      height: auto;
      margin: 0 auto;
      display: block;
  }
  #shopify-section-{{ section.id }} #cardsectionxb82131 .cardsectionxb82131_wrap_item p {
      color: {{ section.settings.text_color }};
      margin-top: 8px;
      text-align: center;
      font-size: 12px;
      line-height: 16px;
  }

  @media (min-width: 768px) {
      #shopify-section-{{ section.id }} #cardsectionxb82131  .cardsectionxb82131_container {
          border-radius: 8px;
          max-width: {% if section.settings.full_with %} 100% {% else %} {{ section.settings.max_width }}px {% endif %};
          margin-right: {% if section.settings.full_with %} {{ section.settings.desktop_right_spacing }}px  {% else %} auto {% endif %};
          margin-left: {% if section.settings.full_with %} {{ section.settings.desktop_left_spacing }}px  {% else %} auto {% endif %};
          margin-top: {{ section.settings.desktop_top_spacing }}px;
          margin-bottom: {{ section.settings.desktop_bottom_spacing }}px;
          padding: 40px 0;
      }
      #shopify-section-{{ section.id }} #cardsectionxb82131  .cardsectionxb82131_title {
          font-size: 30px;
          line-height: 36px;
      }
      #shopify-section-{{ section.id }} #cardsectionxb82131 .cardsectionxb82131_wrapper {
          gap: 20px;
      }
      #shopify-section-{{ section.id }} #cardsectionxb82131 .cardsectionxb82131_wrap_item p {
          font-size: 14px;
          line-height: 20px;
      }
  }
  @media (min-width: 1024px) {
      #shopify-section-{{ section.id }} #cardsectionxb82131  .cardsectionxb82131_subtitle {
          font-size: 18px;
          line-height: 28px;
      }
  }
</style>

<section id="cardsectionxb82131">
  <div class="cardsectionxb82131_container">
    <div class="cardsectionxb82131_content">
      <div class="cardsectionxb82131_header">
        <h2 class="cardsectionxb82131_title">{{ section.settings.heading }}</h2>
        <p class="cardsectionxb82131_subtitle">{{ section.settings.subheading }}</p>
      </div>
      <div class="cardsectionxb82131_wrapper">
        {% for block in section.blocks %}
          <div class="cardsectionxb82131_wrap_item">
            <a href="{{ block.settings.url }}">
              <img src="{{ block.settings.image | img_url: "master" }}" alt="">
              <p>{{ block.settings.text }}</p>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Card Action",
    "blocks": [
    {
      "type": "item",
      "name": "Item",
      "limit": 2,
      "settings": [
          {
            "type":"text",
            "id":"url",
            "label":"URL"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Text",
            "default":"Envoyez-nous <br> un message"
          }
      ]
    }
  ],
  "settings": [
    {
      "type":"color",
      "id":"bg_color",
      "label":"Couleur fond",
      "default":"#FFE6C8"
    },
    {
      "type":"color",
      "id":"card_color",
      "label":"Couleur card",
      "default":"#fff"
    },
    {
      "type":"color",
      "id":"text_color",
      "label":"Couleur text",
      "default":"#EA5B0C"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default":"Des questions sur ce produit ?"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub Heading",
      "default":"Contactez-nous pour en savoir plus !"
    },
  {
    "type": "range",
    "id": "desktop_top_spacing",
    "min": 0,
    "max": 200,
    "step": 5,
    "unit": "px",
    "label": "Desktop Top Spacing",
    "default": 40
  },
  {
    "type": "range",
    "id": "desktop_bottom_spacing",
    "min": 0,
    "max": 200,
    "step": 5,
    "unit": "px",
    "label": "Desktop Bottom Spacing",
    "default": 40
  },
  {
    "type": "range",
    "id": "desktop_left_spacing",
    "min": 0,
    "max": 200,
    "step": 5,
    "unit": "px",
    "label": "Desktop Left Spacing",
    "default": 40
  },
  {
    "type": "range",
    "id": "desktop_right_spacing",
    "min": 0,
    "max": 200,
    "step": 5,
    "unit": "px",
    "label": "Desktop Right Spacing",
    "default": 40
  },
  {
    "type": "range",
    "id": "mobile_top_spacing",
    "min": 0,
    "max": 200,
    "step": 5,
    "unit": "px",
    "label": "Mobile Top Spacing",
    "default": 20
  },
  {
    "type": "range",
    "id": "mobile_bottom_spacing",
    "min": 0,
    "max": 200,
    "step": 5,
    "unit": "px",
    "label": "Mobile Bottom Spacing",
    "default": 20
  },
  {
    "type": "range",
    "id": "mobile_left_spacing",
    "min": 0,
    "max": 200,
    "step": 5,
    "unit": "px",
    "label": "Mobile Left Spacing",
    "default": 20
  },
  {
    "type": "range",
    "id": "mobile_right_spacing",
    "min": 0,
    "max": 200,
    "step": 5,
    "unit": "px",
    "label": "Mobile Right Spacing",
    "default": 20
  },
  {
    "type": "checkbox",
    "id": "full_with",
    "label": "Full Width",
    "default": false
  },
  {
    "type": "range",
    "id": "max_width",
    "min": 500,
    "max": 2000,
    "step": 100,
    "unit": "px",
    "label": "Max Width",
    "default": 1400
  }
  ],
  "presets": [
    {
      "name": "Card Action"
    }
  ]
}
{% endschema %}
