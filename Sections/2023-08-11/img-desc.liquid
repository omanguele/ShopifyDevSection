<style>
    #shopify-section-{{ section.id }} #imagdesciptboxsh12318 {
        width: 100%;
        position: relative;
        background-color: {{ section.settings.bg_color }};
    }
    #shopify-section-{{ section.id }} #imagdesciptboxsh12318  .imagdesciptboxsh12318_wrapper {
        width: 100%;
        margin-right: {{ section.settings.mobile_right_spacing }}px;
  margin-left: {{ section.settings.mobile_left_spacing }}px;
  margin-top: {{ section.settings.mobile_top_spacing }}px;
  margin-bottom: {{ section.settings.mobile_bottom_spacing }}px;
        display: grid;
        grid-template-columns: repeat({{ section.settings.mobile_item_perview }}, minmax(0, 1fr));
        overflow: hidden;
        position: relative;
        gap: 40px;
    }
    #shopify-section-{{ section.id }} #imagdesciptboxsh12318  .imagdesciptboxsh12318_wrapper_item {
        width: 100%;
        position: relative;
    }

    #shopify-section-{{ section.id }} #imagdesciptboxsh12318  .imagdesciptboxsh12318_wrapper_item a {
        display: block;
        text-decoration: none;
        width: 100%;
    }

    #shopify-section-{{ section.id }} #imagdesciptboxsh12318  .imagdesciptboxsh12318_wrapper_item img {
        max-width: 100%;
        width: 100%;
        height: {{ section.settings.section_height_mob }};
        {% if section.settings.section_height_mob != "auto" %}object-fit: cover; {% endif %}
    }
    #shopify-section-{{ section.id }} #imagdesciptboxsh12318  .imagdesciptboxsh12318_wrapper_overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        max-width: 270px;
        padding: 25px;
    }
    #shopify-section-{{ section.id }} #imagdesciptboxsh12318  .imagdesciptboxsh12318_item_title {
        text-align: left;
        text-transform: uppercase;
        color: {{ section.settings.text_color }};
        font-size: 30px;
    }
    #shopify-section-{{ section.id }} #imagdesciptboxsh12318  .imagdesciptboxsh12318_item_desc{
            font-size: 14px;
            margin-top: 7px;
            margin-bottom: 2px;
            color: {{ section.settings.text_color }};
    }
    #shopify-section-{{ section.id }} #imagdesciptboxsh12318 .imagdesciptboxsh12318_item_btn {
        color: {{ section.settings.btn_text_color }};
        background-color: {{ section.settings.btn_bg_color }};
        max-width: 205px;
        width: 100%;
        font-weight: 700;
        text-align: center;
        letter-spacing: .5px;
        line-height: 1;
        text-transform: uppercase;
        border: none;
        border-radius: 4px;
        padding: 15px;
        font-size: 15px;
        margin-bottom: 10px;
        margin-top: 25px;
    }
    @media only screen and (min-width: 768px) {
      #shopify-section-{{ section.id }} #imagdesciptboxsh12318  .imagdesciptboxsh12318_wrapper_item img {
            height: {{ section.settings.section_height }};
            {% if section.settings.section_height != "auto" %}object-fit: cover; {% endif %}
        }
        #shopify-section-{{ section.id }} #imagdesciptboxsh12318  .imagdesciptboxsh12318_item_title {
            font-size: 36px;
        }
        #shopify-section-{{ section.id }} #imagdesciptboxsh12318 .imagdesciptboxsh12318_item_btn {
            padding: 15px 25px ;
        }
        #shopify-section-{{ section.id }} #imagdesciptboxsh12318  .imagdesciptboxsh12318_wrapper_overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            max-width: 67%;
            padding: 25px;
        }
    }
    @media only screen and (min-width: 980px) {
        #shopify-section-{{ section.id }} #imagdesciptboxsh12318 .imagdesciptboxsh12318_wrapper {
            grid-template-columns: repeat({{ section.settings.desktop_item_perview }}, minmax(0, 1fr));
          max-width: {% if section.settings.full_with %} 100% {% else %} {{ section.settings.max_width }}px {% endif %};
      margin-right: {% if section.settings.full_with %} {{ section.settings.desktop_right_spacing }}px  {% else %} auto {% endif %};
      margin-left: {% if section.settings.full_with %} {{ section.settings.desktop_left_spacing }}px  {% else %} auto {% endif %};
      margin-top: {{ section.settings.desktop_top_spacing }}px;
      margin-bottom: {{ section.settings.desktop_bottom_spacing }}px;
        }
        #shopify-section-{{ section.id }} #imagdesciptboxsh12318  .imagdesciptboxsh12318_wrapper_overlay {
            padding: 25px;
        }

    }
    @media only screen and (min-width: 1025px) {
        #shopify-section-{{ section.id }} #imagdesciptboxsh12318 .imagdesciptboxsh12318_wrapper_overlay {
            padding: 50px;
        }
    }
</style>

<section id="imagdesciptboxsh12318">
  <div class="imagdesciptboxsh12318_wrapper">
    {% for block in section.blocks %}
      <div class="imagdesciptboxsh12318_wrapper_item">
        <a href="{{ block.settings.url }}">
          <img src="{{ block.settings.image | img_url: "master" }}" alt="">
          <div class="imagdesciptboxsh12318_wrapper_overlay">
            <h2 class="imagdesciptboxsh12318_item_title">{{ block.settings.heading }}</h2>
            <p class="imagdesciptboxsh12318_item_desc">{{ block.settings.subheading }}</p>
            <button type="button" class="imagdesciptboxsh12318_item_btn">{{ section.settings.btn_lbl }}</button>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</section>

