<style>
  #shopify-section-{{ section.id }} #cardlistsliderxb21811 {
      position: relative;
      width: 100%;
      background-color: {{ section.settings.bg_color }};
  }
  #shopify-section-{{ section.id }} #cardlistsliderxb21811  .cardlistsliderxb21811_container {
      padding: {{ section.settings.mobile_top_spacing }}px {{ section.settings.mobile_left_spacing }}px {{ section.settings.mobile_bottom_spacing }}px {{ section.settings.mobile_right_spacing }}px;
      width: 100%;
  }
  #shopify-section-{{ section.id }} #cardlistsliderxb21811 .swiper {
      width: 100%;
      height: 100%;
  }

  #shopify-section-{{ section.id }} #cardlistsliderxb21811  .cardlistsliderxb21811_controls {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 20px;
      margin-top: 20px;
  }
  #shopify-section-{{ section.id }} #cardlistsliderxb21811  .cardlistsliderxb21811_controls_btn {
      cursor: pointer;
      background-color: {{ section.settings.btn_bg_color }};
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      position: relative;
  }
  #shopify-section-{{ section.id }} #cardlistsliderxb21811  .cardlistsliderxb21811_slide {
      width: 100%;
      position: relative;
      padding: 8px;
  }
  #shopify-section-{{ section.id }} #cardlistsliderxb21811  .cardlistsliderxb21811_slide_inner {
      border-radius: 8px;
      min-height: 300px;
      margin-bottom: 20px;
      padding: 32px 16px 16px 16px;
      background-color: {{ section.settings.card_color }};
      box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  }
  #shopify-section-{{ section.id }} #cardlistsliderxb21811 .cardlistsliderxb21811_slide_content {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      height: 100%;
  }
  #shopify-section-{{ section.id }} #cardlistsliderxb21811   .cardlistsliderxb21811_slider {
      width: 100%;
      padding: 0 16px;
  }
  #shopify-section-{{ section.id }} #cardlistsliderxb21811  .cardlistsliderxb21811_slide_title {
      color: {{ section.settings.card_heading_color }};
      font-size: 16px;
      line-height: 24px;
      display: block;
      font-weight: 700;
      margin-bottom: 20px;
  }
  #shopify-section-{{ section.id }} #cardlistsliderxb21811  .cardlistsliderxb21811_slide_list {
      list-style: none;
      margin: 0;
      padding: 0;
  }
  #shopify-section-{{ section.id }} #cardlistsliderxb21811  .cardlistsliderxb21811_slide_list_item {
      margin-bottom: 16px;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      font-size: 14px;
      line-height: 20px;
      color: {{ section.settings.text_color }} !important;
  }
  #shopify-section-{{ section.id }} #cardlistsliderxb21811  .cardlistsliderxb21811_slide_list_item span {
      display: block;
  }
  #shopify-section-{{ section.id }} #cardlistsliderxb21811  .cardlistsliderxb21811_slide_list_item  .ico {
      margin-right: 12px;
  }
  #shopify-section-{{ section.id }} #cardlistsliderxb21811   .cardlistsliderxb21811_title {
      color: {{ section.settings.heading_color }};
      font-weight: 700;
      text-align: center;
      margin-bottom: 32px;
      margin-right: auto;
      margin-left: auto;
      font-size: 24px;
      line-height: 32px;
      width: 92%;
  }
  #shopify-section-{{ section.id }} #cardlistsliderxb21811  .swiper-button-disabled {
      cursor: auto;
      opacity: .5;
  }
  @media (min-width: 768px) {
      #shopify-section-{{ section.id }} #cardlistsliderxb21811  .cardlistsliderxb21811_title {
          font-size: 30px;
          line-height: 36px;
      }
      #shopify-section-{{ section.id }} #cardlistsliderxb21811  .cardlistsliderxb21811_slider {
          padding: 0;
      }
  }
  @media (min-width: 1024px) {
      #shopify-section-{{ section.id }} #cardlistsliderxb21811  .cardlistsliderxb21811_container {
          max-width: {% if section.settings.full_with %} 100% {% else %} {{ section.settings.max_width }}px {% endif %};
          margin-right: {% if section.settings.full_with %} {{ section.settings.desktop_right_spacing }}px  {% else %} auto {% endif %};
          margin-left: {% if section.settings.full_with %} {{ section.settings.desktop_left_spacing }}px  {% else %} auto {% endif %};
          padding: {{ section.settings.desktop_top_spacing }}px 0 {{ section.settings.desktop_bottom_spacing }}px 0;
          width: 100%;
      }
  }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css">

<section id="cardlistsliderxb21811">
  <div class="cardlistsliderxb21811_container">
    <h2 class="cardlistsliderxb21811_title">{{ section.settings.heading }}</h2>
    <div class="cardlistsliderxb21811_slider">
      <div class="swiper cardlistsliderxb21811-swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="cardlistsliderxb21811_slide">
                <div class="cardlistsliderxb21811_slide_inner">
                  <div class="cardlistsliderxb21811_slide_content">
                    <h5 class="cardlistsliderxb21811_slide_title">{{ block.settings.heading }}</h5>
                    <ul class="cardlistsliderxb21811_slide_list">
                      {% assign textList = block.settings.text | split: ',' %}
                      {% for text in textList %}
                        <li class="cardlistsliderxb21811_slide_list_item">
                          <span class="ico">
                            <svg
                              width="24"
                              height="25"
                              viewBox="0 0 24 25"
                              fill="none"
                              xmlns="http://www.w3.org/2000/svg"
                            >
                              <rect y="0.428589" width="24" height="24" rx="12" fill="{{ section.settings.btn_bg_color }}"></rect>
                              <path fill-rule="evenodd" clip-rule="evenodd" d="M16.5184 10.069C16.8721 9.64487 16.8149 9.01429 16.3908 8.66059C15.9666 8.30689 15.336 8.36402 14.9823 8.78819L10.7501 13.8637L9.01805 11.7865C8.66435 11.3624 8.03377 11.3052 7.6096 11.6589C7.18543 12.0126 7.12831 12.6432 7.482 13.0674L9.96577 16.046C9.99871 16.0875 10.0354 16.1269 10.0757 16.1637C10.1404 16.2229 10.2114 16.2723 10.2866 16.3116C10.5917 16.471 10.9661 16.4648 11.2693 16.2801C11.3148 16.2525 11.3583 16.221 11.3996 16.1857C11.4504 16.1424 11.4958 16.095 11.5357 16.0444L16.5184 10.069Z" fill="{{ section.settings.btn_ico_color }}"></path>
                            </svg>
                          </span>
                          <span>{{ text }}</span>
                        </li>
                      {% endfor %}
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="cardlistsliderxb21811_controls">
          <div class="cardlistsliderxb21811_controls_btn cardlistsliderxb21811_controls_prev">
            <svg width="18" height="12" viewBox="0 0 18 12" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M6 11L1 6M1 6L17 6M1 6L6 1" stroke="{{ section.settings.btn_ico_color }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
          </div>
          <div class="cardlistsliderxb21811_controls_btn cardlistsliderxb21811_controls_next">
            <svg width="18" height="12" viewBox="0 0 18 12" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 1L17 6M17 6H1M17 6L12 11" stroke="{{ section.settings.btn_ico_color }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
<script>
  
  
  

        new Swiper(`#shopify-section-{{ section.id }} #cardlistsliderxb21811 .cardlistsliderxb21811-swiper`, {
            freeMode: true,
            navigation: {
                nextEl: "#shopify-section-{{ section.id }} #cardlistsliderxb21811 .cardlistsliderxb21811_controls_next",
                prevEl: "#shopify-section-{{ section.id }} #cardlistsliderxb21811 .cardlistsliderxb21811_controls_prev",
            },

            breakpoints: {
                320: {
                    slidesPerView: 1.2,
                    spaceBetween: 0
                },
                480: {
                    slidesPerView: 1.5,
                    spaceBetween: 0,
                },
                640: {
                    slidesPerView: 2,
                    spaceBetween: 0
                },
                900: {
                    slidesPerView: 2.5,
                    spaceBetween: 0
                },
                1024: {
                    slidesPerView: 3,
                    spaceBetween: 0
                }
            }
        });



</script>

