{
  "name": "Section Avis",
  "blocks": [
    {
      "type": "item",
      "name": "Box",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Titre",
          "default": "kit pro green-flash"
