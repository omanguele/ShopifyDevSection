      ]
    }
  ],
  "settings": [
    {
      "type": "color",
      "id": "bg-color",
      "label": "Couleur de fond",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "text-color",
      "label": "Couleur du texte",
      "default": "rgb(47, 44, 44)"
    },
    {
      "type": "color",
      "id": "dist-color",
      "label": "Couleur du texte avant",
