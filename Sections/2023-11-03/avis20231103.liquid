 <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
<style>

  
#shopify-section-{{ section.id }} #avisclient231103 {
  font-family: "Poppins", sans-serif;
  background-color: {{ section.settings.bg-color }};
  height: 100%;
  width: 100%;
}
#shopify-section-{{ section.id }} #avisclient231103 p,
h1,
h2,
h3,
h4,
h5,
h6 {
  margin: 0;
}

#shopify-section-{{ section.id }} #avisclient231103 .container {
  max-width: 1300px;
  display: flex;
  flex-direction: row;
  gap: 20px;
  padding: 50px;
  position: relative;
  margin: auto;
}

#shopify-section-{{ section.id }} #avisclient231103 .left {
  gap: 10px;
  width: 50%;
  padding: 50px;
}

#shopify-section-{{ section.id }} #avisclient231103 .left .wrapper {
  display: flex;
  flex-direction: column;
  text-align: center;
  position: relative;
  top: 15%;
}
#shopify-section-{{ section.id }} #avisclient231103 .left .wrapper .title {
  text-transform: uppercase;
  color: {{ section.settings.text-color }};
  letter-spacing: 2px;
  margin: 0;
}
#shopify-section-{{ section.id }} #avisclient231103 .left .wrapper .subtitle {
  font-size: 40px;
  color: {{ section.settings.text-color }};
  margin-top: 2px;
  margin-bottom: 0;
}
#shopify-section-{{ section.id }} #avisclient231103 .left .wrapper .text-desc {
  font-size: 12px;
  color: {{ section.settings.text-color }};
  opacity: 0.9;
  padding: 10px 0 10px;
}
#shopify-section-{{ section.id }} #avisclient231103 .left .wrapper .row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 70%;
  margin: auto;
  padding: 10px;
}
#shopify-section-{{ section.id }} #avisclient231103 .left .wrapper .row p {
  font-size: 10px;
  opacity: 0.7;
}

#shopify-section-{{ section.id }} #avisclient231103 .icon{
  font-size: 20px; color: {{ section.settings.icon-color }}
}

#shopify-section-{{ section.id }} #avisclient231103 .left .wrapper .btn {
  margin: auto;
  width: 60%;
  padding: 8px;
  background-color: #fff;
  border: 1.5px solid #000;
  text-align: center;
  cursor: pointer;
  color: #000;
}
#shopify-section-{{ section.id }} #avisclient231103 .left .wrapper .btn p {
  font-weight: bold;
  font-size: 14px;
  margin: 0;
}

#shopify-section-{{ section.id }} #avisclient231103 .right {
  gap: 20px;
  width: 50%;
  padding: 50px;
}
#shopify-section-{{ section.id }} #avisclient231103 .right .wrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: left
}
#shopify-section-{{ section.id }} #avisclient231103 .right .wrapper .title {
  margin: 0;
  padding-bottom: 10px;
}
#shopify-section-{{ section.id }} #avisclient231103 .right .wrapper .title span {
  color: {{ section.settings.dist-color }};
}
#shopify-section-{{ section.id }} #avisclient231103 .right .wrapper .box-wrapper {
  display: flex;
  flex-direction: column;
  gap: 5px;
}
#shopify-section-{{ section.id }} #avisclient231103 .right .wrapper .box-wrapper .box {
  display: flex;
  flex-direction: column;
  padding: 15px;
  background-color: #fff;
}
#shopify-section-{{ section.id }} #avisclient231103 .right .wrapper .box-wrapper .box .header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 10px;
  background-color: #fff;
}
#shopify-section-{{ section.id }} #avisclient231103 .right .wrapper .box-wrapper .box .header h4 {
  text-transform: uppercase;
  font-size: 12px;
}
#shopify-section-{{ section.id }} #avisclient231103 .right .wrapper .box-wrapper .box .header p {
  color: gray;
  font-size: 8px;
  margin-top: 5px;
}
#shopify-section-{{ section.id }} #avisclient231103 .right .wrapper .box-wrapper .box .star-wrapper {
  padding: 10px 0 10px;
}
#shopify-section-{{ section.id }} #avisclient231103 .right .wrapper .box-wrapper .box p {
  font-size: 13px;
}

@media (max-width: 1100px) {
  #shopify-section-{{ section.id }} #avisclient231103 .container {
    flex-direction: column;
    margin: auto;
    width: 100%;
    padding: 0;
  }

  #shopify-section-{{ section.id }} #avisclient231103 .left {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 20px;
    width: 100%;
    padding: 30px;
  }
  #shopify-section-{{ section.id }} #avisclient231103 .left .wrapper .subtitle {
    font-size: 30px;
    color: {{ section.settings.text-color }};
    margin-top: 2px;
    margin-bottom: 0;
  }
  #shopify-section-{{ section.id }} #avisclient231103 .left .wrapper .row {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    margin: auto;
  }

  #shopify-section-{{ section.id }} #avisclient231103 .right {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 20px;
    width: 100%;
    padding: 30px;
  }
  #shopify-section-{{ section.id }} #avisclient231103 .right .wrapper .title {
    text-align: center;
  }
}


</style>
