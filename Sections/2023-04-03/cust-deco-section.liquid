<style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap');

#custdecosection210323 {
    font-family: 'Poppins';
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }} !important;
    position: relative;
    padding: 40px 20px;
}

#custdecosection210323 .container {
    max-width: 1000px;
    max-height: 80vh;
    min-height: 80vh;
    width: 100%;
    margin: 0 auto;
    position: relative;
    overflow: hidden;
}

#custdecosection210323 .container .step {
    display: flex;
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 0;
    transform: translateX(100%);
    transition: all 500ms;
}

#custdecosection210323  .container .step.active {
    transform: translateX(0);
    transition: all 500ms;
}

#custdecosection210323  .container .step.active.finish {
    transform: translateX(-100%);
    transition: all 500ms;
}

#custdecosection210323  .step.complete > .container_content  .step_footer .next_btn {
    opacity: 1;
    cursor: pointer;
}

#custdecosection210323  .container .step .container_back_btn {
    padding-right: 30px;
}

#custdecosection210323  .step .container_back_btn .back_btn {
    background-color: #fff;
    border: 1px solid {{ section.settings.highlight_color }};
    height: 40px;
    width: 40px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: {{ section.settings.highlight_color }};
    cursor: pointer;
}

#custdecosection210323  .step .container_back_btn .back_btn svg {
    width: 25px;
    height: 25px;
}

#custdecosection210323  .container_content {
    flex-grow: 1;
    will-change: transform;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    overflow: hidden;
}

#custdecosection210323  .step_footer {
    background-color: linear-gradient(transparent, #fff);;
    width: 100%;
    height: 80px;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

#custdecosection210323  .step_footer .next_btn {
    background-color: {{ section.settings.highlight_color }};
    border: none;
    color: #fff;
    padding: 15px;
    min-width: 300px;
    border-radius: 10px;
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    cursor: default;
    opacity: 0.5;
    display: flex;
    align-items: center;
    justify-content: center;
}

#custdecosection210323  .step_footer .next_btn span {
    display: block;
}

#custdecosection210323  .step_footer .next_btn span.price{
    margin: 0 10px;
}

#custdecosection210323  .step_footer .next_btn svg {
    width: 20px;
    height: 20px;
    margin-top: 2px;
}

#custdecosection210323 .container_content .step_header {
    display: flex;
    justify-content: space-between;
    width: 100%;
    padding: 0 20px;
    position: relative;
}

#custdecosection210323 .container_content .step_header .step_header_line {
    position: absolute;
    width: calc(100% - 40px);
    height: 1px;
    background-color: {{ section.settings.highlight_color }};
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
}

#custdecosection210323 .container_content .step_header .step_header_item {
    background-color: #fff;
    border: 1px solid {{ section.settings.highlight_color }};
    height: 40px;
    width: 40px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: {{ section.settings.highlight_color }};
    font-weight: 900;
    font-size: 18px;
    z-index: 10;
    text-align: center;
    
}

#custdecosection210323 #step2_1_yes {
    width: 100%;
}

#custdecosection210323 .container_content .step_header .step_header_item.active {
    background-color: {{ section.settings.highlight_color }};
    color: #fff;
}

#custdecosection210323 .step_title {
    
    text-align: center;
    margin-top: 30px;
    font-size: 38px;
    text-transform: uppercase;
    word-break: break-word;
    line-height: 1;
    color: #35373c;
    font-weight: 800;
    letter-spacing: 2px;
    width: 100%;
}

#custdecosection210323 .hide {
    display: none !important;
}

#custdecosection210323 .container_step_question {
    margin-top: 40px;
    padding-bottom: 80px;
    flex-grow: 1;
    width: 100%;
    overflow-y: auto;
    overflow-x: hidden;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

#custdecosection210323 .container_step_question .question {
    margin-bottom: 50px;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding: 0 40px;
}

#custdecosection210323 .container_step_question .question label {
    display: block;
    font-size: 22px;
    color: #35373c;
    font-weight: 600;
    font-style: italic;
    text-align: center;
    word-break: break-word;
    margin-bottom: 20px;
    
}

#custdecosection210323 .container_step_question .question input {
    display: block;
    padding: 15px;
    border-radius: 10px;
    border: 1px solid #ddd8d8;
    font-size: 18px;
    outline: none;
}

#custdecosection210323 p.desc {
    
    text-align: center;
    font-size: 18px;
    margin-bottom: 10px;
}

#custdecosection210323 .container_step_question .question input[type=text]{
    width: 60%;
}

#custdecosection210323 img {
    max-width: 100%;
    display: block;
}

#custdecosection210323 #step3_3_no {
    width: 100%;
    flex-direction: column;
    display:flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 50px;
}

#custdecosection210323 .container_image_answer {
    width: 100%;
    padding: 20px;
    margin-top: 10px;
    display: flex;
    flex-wrap: wrap;
}

#custdecosection210323 .container_image_answer .image_answer {
    max-width: 20%;
    margin-right: 20px;
    margin-bottom: 20px;
}

#custdecosection210323 .container_image_answer .image_answer img {
    width: 100%;
    height: auto;
    object-fit: cover;
}

#custdecosection210323 .container_image_answer .image_answer label {
    margin: 0;
    width: 100%;
    display: block;
    cursor: pointer;
    border-radius: 10px;
    overflow: hidden;
}

#custdecosection210323 .container_image_answer input[type=checkbox] {
    display: none;
}

#custdecosection210323 .container_image_answer input[type=checkbox]:checked + label {
    border: 1px solid {{ section.settings.highlight_color }};
}

#custdecosection210323 #step3_3_yes {
    width: 100%;
    display:flex;
    justify-content: center;
    margin-bottom: 50px;
}

#custdecosection210323 #step3_3_yes textarea {
    resize: none;
    width: 60%;
    height: 300px;
    border-radius: 20px;
    border: 1px solid #ddd8d8;
    outline: none;
    padding: 20px;
    font-size: 18px;
    line-height: 1.5;
}

#custdecosection210323 .container_sponsor {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

#custdecosection210323 .add_sponsor {
    margin-top: 20px;
    padding: 15px;
    min-width: 150px;
    font-size: 18px;
    background-color: #fff;
    border: 1px solid {{ section.settings.highlight_color }};
    color: {{ section.settings.highlight_color }};
    border-radius: 10px;
    cursor: pointer;
}

#custdecosection210323 .container_sponsor .sponsor_item {
    width: 70%;
    display: flex;
    align-items: center;
    margin-bottom: 10px;
}

#custdecosection210323 .container_sponsor .sponsor_item input[type=text] {
    width: 100%;
    margin-right: 20px;
}

#custdecosection210323 .container_sponsor .sponsor_item:first-child input[type=text] {
    margin-right: 0px;
}

#custdecosection210323 .container_sponsor .sponsor_item .remove_sponsor {
    cursor: pointer;
}

#custdecosection210323 .container_sponsor .sponsor_item .remove_sponsor svg {
    width: 30px;
    height: 30px;
    color: {{ section.settings.highlight_color }};
}

#custdecosection210323 .cust_radio_container {
    display: flex;
    width: 100%;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
}

#custdecosection210323 .cust_radio_container input[type=radio] {
    display: none;
}

#custdecosection210323 .cust_radio_container input[type=radio]:checked + label {
    border: 1px solid {{ section.settings.highlight_color }};
    color: {{ section.settings.highlight_color }};
}

#custdecosection210323 .cust_radio_container input[type=radio]:checked  + label .cust_radio {
    border-color: {{ section.settings.highlight_color }};
}

#custdecosection210323 .cust_radio_container input[type=radio]:checked  + label .cust_radio .inner_cust_radio {
    display: block;
}

#custdecosection210323 .cust_radio_container label {
    border: 1px solid #1A1A1A;
    display: flex !important;
    align-items: center;
    cursor: pointer;
    padding: 15px;
    border-radius: 10px;
    font-size: 16px !important;
    margin-right: 20px;
}

#custdecosection210323 .cust_radio_container label span {
    display: block;
}

#custdecosection210323 .cust_radio_container label .cust_radio {
    height: 12px;
    width: 12px;
    border-radius: 50%;
    border: 1px solid #1A1A1A;
    margin-right: 10px;
    margin-top: -2px;
    padding: 2px;
    display: flex;
    justify-content: center;
    align-items: center;
}

#custdecosection210323 .cust_radio_container label .cust_radio .inner_cust_radio {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-color: {{ section.settings.highlight_color }};
    display: none;
}

@media only screen and (max-width: 780px) {
    #custdecosection210323 .container_step_question .question {
        margin-bottom: 30px;
        padding: 0 10px;
    }

    #custdecosection210323 .container_content .step_header {
        padding: 0 10px;
    }

    #custdecosection210323 .container_content .step_header .step_header_line {
        width: calc(100% - 20px);
    }

    #custdecosection210323 .container_image_answer .image_answer {
        max-width: 40%;
    }

    #custdecosection210323 #step3_3_yes textarea {
        width: 100%;
        height: 200px;
        padding: 15px;
        font-size: 15px;
    }

    #custdecosection210323 .container_sponsor .sponsor_item {
        width: 100%;
    }
    
    #custdecosection210323 .container_sponsor .sponsor_item input[type=text] {
        width: 100%;
        margin-right: 10px;
    }

    #custdecosection210323 .container_sponsor .sponsor_item .remove_sponsor svg {
        width: 25px;
        height: 25px;
    }

    #custdecosection210323 .add_sponsor {
        margin-top: 10px;
        padding: 10px;
        min-width: 150px;
        font-size: 12px;
    }

    #custdecosection210323 .cust_radio_container label {
        padding: 10px;
        font-size: 12px !important;
        margin-right: 10px;
    }

    #custdecosection210323 .container .step .container_back_btn {
        padding: 0;
        position: absolute;
        bottom: 15px;
        width: auto;
        height: auto;
        z-index: 10;
    }

    #custdecosection210323 .step .container_back_btn .back_btn {
        height: 30px;
        width: 30px;
    }

    #custdecosection210323 .step .container_back_btn .back_btn svg {
        width: 20px;
        height: 20px;
    }

    #custdecosection210323 .step_footer .next_btn {
        padding: 10px;
        min-width: 200px;
        border-radius: 10px;
        font-size: 14px;
    }

    #custdecosection210323 .step_footer {
        height: 60px;
    }

    #custdecosection210323 .step_title {
        font-size: 28px;
    }

    #custdecosection210323 .container_content .step_header .step_header_item {
        height: 30px;
        width: 30px;
        border-radius: 50%;
        font-size: 16px;
    }

    #custdecosection210323 .container_step_question .question label {
        display: block;
        font-size: 16px;
        color: #35373c;
        font-weight: 600;
        font-style: italic;
        text-align: center;
        word-break: break-word;
        margin-bottom: 10px;
        
    }
    
    #custdecosection210323 .container_step_question .question input {
        font-size: 18px;
    }
    
    #custdecosection210323 p.desc {
        font-size: 14px;
        margin-bottom: 8px;
    }
    
    #custdecosection210323 .container_step_question .question input[type=text]{
        width: 100%;
    }

    #custdecosection210323 .container_step_question .question input {
        padding: 10px;
        font-size: 15px;
    }
}
</style>

<section id="custdecosection210323">
    <div class="container">
        <!-- Step 1 -->
        <div class="step active" id="step1">
            <div class="container_back_btn">
                <button type="button" class="back_btn">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
                    </svg>
                </button>
            </div>
        
            <div class="container_content">
                <div class="step_header">
                    <span class="step_header_line"></span>
                    <div class="step_header_item active"><span>1</span></div>
                    <div class="step_header_item"><span>2</span></div>
                    <div class="step_header_item"><span>3</span></div>
                    <div class="step_header_item"><span>4</span></div>
                </div>

                <div class="step_title">{{ section.settings.step_1_title }}</div>

                <div class="container_step_question">
                    <div class="question">
                        <label for="step1_1">Quel est le modele de votre moto ?</label>
                        <input type="text" id="step1_1" name="step1_1" placeholder="Exemple: Rieju MRT Pro">
                    </div>

                    <div class="question">
                        <label for="step1_2">Quel est l'année de votre moto ?</label>
                        <input type="text" id="step1_2" name="step1_2" placeholder="Exemple: 2020">
                    </div>
                </div>



                <div class="step_footer">
                    <button class="next_btn" type="button">
                        <span>Continuer</span>
                        <span class="price">| 0€</span>
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                              </svg>                                  
                        </span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Step 2 -->
        <div class="step" id="step2">
            <div class="container_back_btn">
                <button type="button" class="back_btn">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
                    </svg>
                </button>
            </div>
        
            <div class="container_content">
                <div class="step_header">
                    <span class="step_header_line"></span>
                    <div class="step_header_item"><span>1</span></div>
                    <div class="step_header_item active"><span>2</span></div>
                    <div class="step_header_item"><span>3</span></div>
                    <div class="step_header_item"><span>4</span></div>
                </div>

                <div class="step_title">{{ section.settings.step_2_title }}</div>

                <div class="container_step_question">
                    <div class="question">
                        <label for="step2_1">Avez-vous changer votre plaque phare ou garde boue ?</label>
                        <div class="cust_radio_container">
                            <input type="radio" value="{{ section.settings.step_2_product_1.id }}" data-price="{{ section.settings.step_2_product_1.price | money_without_currency }}" name="step2_1" id="step2_1_1"> 
                            <label for="step2_1_1"> 
                                <span class="cust_radio">
                                    <span class="inner_cust_radio"></span>
                                </span>
                                <span>Plaque Phare (+{{ section.settings.step_2_product_1.price | money }})</span>
                            </label>

                            <input type="radio" value="{{ section.settings.step_2_product_2.id }}" data-price="{{ section.settings.step_2_product_2.price | money_without_currency }}" name="step2_1" id="step2_1_2"> 
                            <label for="step2_1_2"> 
                                <span class="cust_radio">
                                    <span class="inner_cust_radio"></span>
                                </span>
                                <span>Garde Boue (+{{ section.settings.step_2_product_2.price | money }})</span>
                            </label>

                            <input type="radio" value="{{ section.settings.step_2_product_3.id }}" data-price="{{ section.settings.step_2_product_3.price | money_without_currency }}"  name="step2_1" id="step2_1_3"> 
                            <label for="step2_1_3"> 
                                <span class="cust_radio">
                                    <span class="inner_cust_radio"></span>
                                </span>
                                <span>Les deux (+{{ section.settings.step_2_product_3.price | money }})</span>
                            </label>

                            <input type="radio" value="no" data-price="0"  name="step2_1" id="step2_1_4"> 
                            <label for="step2_1_4"> 
                                <span class="cust_radio">
                                    <span class="inner_cust_radio"></span>
                                </span>
                                <span>NON</span>
                            </label>
                        </div>
                    </div>

                    <div id="step2_1_plaque_phare"  class="question hide">
                        <label for="step2_2">Modèle et année de votre plaque phare</label>
                        <input type="text" id="step2_2" name="step2_2" placeholder="Exemple: XXXX">
                    </div>

                    <div id="step2_1_garde_boue" class="question hide">
                        <label for="step2_3">Modèle et année de votre garde boue</label>
                        <input type="text" id="step2_3" name="step2_3" placeholder="Exemple: XXXXX">
                    </div>
                    
                </div>

                <div class="step_footer">
                    <button class="next_btn" type="button">
                        <span>Continuer</span>
                        <span class="price">| 0€</span>
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                              </svg>                                  
                        </span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Step 3 -->
        <div class="step" id="step3">
            <div class="container_back_btn">
                <button type="button" class="back_btn">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
                    </svg>
                </button>
            </div>
        
            <div class="container_content">
                <div class="step_header">
                    <span class="step_header_line"></span>
                    <div class="step_header_item"><span>1</span></div>
                    <div class="step_header_item"><span>2</span></div>
                    <div class="step_header_item active"><span>3</span></div>
                    <div class="step_header_item"><span>4</span></div>
                </div>

                <div class="step_title">{{ section.settings.step_3_title }}</div>

                <div class="container_step_question">

                    <div class="question">
                        <label for="step3_1">Prénom/Pseudo</label>
                        <input type="text" id="step3_1" name="step3_1" placeholder="Exemple: TixSud">
                    </div>

                    <div class="question">
                        <label for="step3_2">Numéro de course </label>
                        <input type="text" id="step1_1" name="step1_1" placeholder="Exemple: 266">
                    </div>

                    <div class="question" id="step3_3">
                        <label for="step3_3">Avez-vous une idée précise du style de kit déco que vous souhaitez?</label>
                        <div class="cust_radio_container">
                            <input type="radio" value="yes" name="step3_3" id="step3_3_1" checked> 
                            <label for="step3_3_1"> 
                                <span class="cust_radio">
                                    <span class="inner_cust_radio"></span>
                                </span>
                                <span >OUI</span>
                            </label>

                            <input type="radio" value="no" name="step3_3" id="step3_3_2"> 
                            <label for="step3_3_2"> 
                                <span class="cust_radio">
                                    <span class="inner_cust_radio"></span>
                                </span>
                                <span >NON</span>
                            </label>
                        </div>

                    </div>

                    <div id="step3_3_no" class="hide">
                        <p class="desc">Selectionnez 3 images</p>
                        <div class="container_image_answer">
                          {% for block in section.blocks %}
                              <div class="image_answer">
                                  <input type="checkbox" value="{{ block.settings.text }}" id="step3_3_yes_{{ forloop.index }}">
                                  <label for="step3_3_yes_{{ forloop.index }}">
                                      <img src="{{ block.settings.image | image_url:"medium"  }}" alt="{{ block.settings.text }}">
                                  </label>
                              </div>
                            {% endfor %}
                        </div>

                    </div>
                    <div id="step3_3_yes" class="">
                        <textarea name="" placeholder="Exemple: Je veux des têtes d'aliens, je veux que mon nom instagram @xxx soit inscrit sur la plaque de phare..."></textarea>
                    </div>

                    <div class="question">
                        <label for="step3_4">Sponsor que vous voulez voir apparaitre sur le kit déco </label>
                        <p class="desc">10 sponsors maximun</p>
                        <div class="container_sponsor">
                            <div class="sponsor_item">
                                <input type="text" id="sponsor1" name="sponsor1" placeholder="">
                            </div>  
                        </div>
                        <button type="button" class="add_sponsor">Ajouter un sponsor</button>
                        
                    </div>

                </div>

                <div class="step_footer">
                    <button class="next_btn" type="button">
                        <span>Continuer</span>
                        <span class="price">| 0€</span>
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                              </svg>                                  
                        </span>
