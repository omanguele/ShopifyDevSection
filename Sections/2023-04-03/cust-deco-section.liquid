<script>
  const steps = Array.from(document.querySelectorAll('#custdecosection210323 .step'));
let currentStep = 0;
const INIT_PRICE = 100;
let carrenagePrice = 0;
let kitMaterialPrice = 0;
let kitFinishPrice = 0;

// Set Navigation 
steps.forEach((step, index) => {
    step.querySelector('.next_btn').addEventListener('click', function(e) {
        e.preventDefault();
        if((currentStep < steps.length - 1) && step.classList.contains('complete')){
            currentStep = index + 1;
            steps[index].classList.add('finish');
            steps[currentStep].classList.add('active');
            setPrice();
        }
    });

    step.querySelector('.back_btn').addEventListener('click', function(e) {
        e.preventDefault();
        if(currentStep > 0){
            currentStep = index - 1;
            steps[index].classList.remove('active');
            steps[currentStep].classList.remove('finish');
            setPrice();
        }
    });
});

function setPrice() {
    steps[currentStep].querySelector('.step_footer .next_btn .price').innerHTML = `| ${(INIT_PRICE + carrenagePrice + kitMaterialPrice + kitFinishPrice).toFixed(2)} €`; 
}

// Verification for step 1
const step1Input = Array.from(steps[0].querySelectorAll('input[type="text"]'));
step1Input.forEach((input, index) => {
    input.addEventListener('input', function(e) {
        if(step1Input[0].value != "" && step1Input[1].value != ""){
            steps[0].classList.add('complete');
        }else{
            steps[0].classList.remove('complete');
        }
    });
});

// Verification for step 2
const step2Input = Array.from(steps[1].querySelectorAll('input[type="radio"]'));
const step2ContainerPhare = steps[1].querySelector('#step2_1_plaque_phare');
const step2ContainerGarde = steps[1].querySelector('#step2_1_garde_boue');
const textinputsStep2 = Array.from(steps[1].querySelectorAll('input[type="text"]'));

step2Input.forEach((input, index) => {
    input.addEventListener('click', function(e) {
        carrenagePrice = parseFloat(e.target.getAttribute('data-price'));
        if(e.target.checked && e.target.id == 'step2_1_4'){
            step2ContainerPhare.classList.add('hide');
            step2ContainerGarde.classList.add('hide');
        }else if(e.target.id == 'step2_1_1'){
            step2ContainerGarde.classList.add('hide');
            step2ContainerPhare.classList.remove('hide');
        }else if(e.target.id == 'step2_1_2'){
            step2ContainerPhare.classList.add('hide');
            step2ContainerGarde.classList.remove('hide'); 
        }else{
            step2ContainerPhare.classList.remove('hide');
            step2ContainerGarde.classList.remove('hide');
        }
        verificationStep2();
        setPrice();
    });
});

textinputsStep2.forEach((input, index) => {
    input.addEventListener('input', function(e) {
        verificationStep2();
    });
});

function verificationStep2() {
    let selectItem = steps[1].querySelector('input[type="radio"]:checked');
    if(selectItem.id === 'step2_1_3'){
        if(textinputsStep2[0].value != "" && textinputsStep2[1].value != ""){
            steps[1].classList.add('complete');
        }else{
            steps[1].classList.remove('complete');
        }
        
    }else if(selectItem.id === 'step2_1_1') {
        if(textinputsStep2[0].value != "" ){
            steps[1].classList.add('complete');
        }else{
            steps[1].classList.remove('complete');
        }
    }else if(selectItem.id === 'step2_1_2') {
        if(textinputsStep2[1].value != "" ){
            steps[1].classList.add('complete');
        }else{
            steps[1].classList.remove('complete');
        }
    }else {
        steps[1].classList.add('complete');
    }
}



// Verification for step 4
const questionStep4 = Array.from(steps[3].querySelectorAll('.question'));
questionStep4.forEach((question, index) => {
    question.querySelectorAll('input[type="radio"]').forEach((input, index) => {
        input.addEventListener('click', function(e) {
            if(e.target.name == 'step4_1'){
                kitMaterialPrice = parseFloat(e.target.getAttribute('data-price'));
            }else{
                kitFinishPrice = parseFloat(e.target.getAttribute('data-price'));
            }

            let quest1IsChecked = questionStep4[0].querySelector('input[type="radio"]:checked');
            let quest2IsChecked = questionStep4[1].querySelector('input[type="radio"]:checked');
            if(quest2IsChecked && quest1IsChecked ){
                steps[3].classList.add('complete');
            }else{
                steps[3].classList.remove('complete');
            }

            setPrice();
        });
    });
})


// Verification for step 3
const textInputStep3 = Array.from(steps[2].querySelectorAll('input[type="text"]'));
const question3Inputs = Array.from(steps[2].querySelectorAll('#step3_3 input[type="radio"]'));
const Quest3Yes = steps[2].querySelector('#step3_3_yes');
const Quest3No = steps[2].querySelector('#step3_3_no');
const inputQuest3No = Array.from(Quest3No.querySelectorAll('input[type="checkbox"]'));
const containerSponsor = steps[2].querySelector('.container_sponsor');
const btnAddSponsor = steps[2].querySelector('.add_sponsor');
let isKnowStyle = true;
const maxSponsor = 10;
let sponsors = [""];

textInputStep3.forEach((input, index) => {
    input.addEventListener('input', function(e) {
        verificationStep3();
    });
});

Quest3Yes.children[0].addEventListener('input', function(e){
    verificationStep3();
});

question3Inputs.forEach((input, index) => {
    input.addEventListener('click', function(e) {
        if(e.target.checked && e.target.value == 'no'){
            Quest3Yes.classList.add('hide');
            Quest3No.classList.remove('hide');
            isKnowStyle = false;
            verificationStep3();
        }else if(e.target.value == 'yes'){
            Quest3No.classList.add('hide');
            Quest3Yes.classList.remove('hide');
            isKnowStyle = true;
            verificationStep3();
        }
    });
});

inputQuest3No.forEach((input, index) => {
    input.addEventListener('change', function(e) {
        let checkedLenght = Quest3No.querySelectorAll('input[type="checkbox"]:checked').length;
        if(checkedLenght > 3){
            e.target.checked = false;
        }else if(verifySponsors() && textInputStep3[0].value != "" && textInputStep3[1].value != "" && checkedLenght == 3){
            steps[2].classList.add('complete');
        }else{
            steps[2].classList.remove('complete');
        }

    });
});

btnAddSponsor.addEventListener('click', function(e){
    if(sponsors.length < maxSponsor){
        sponsors.push('');
        renderSponsors();
        setListnerSponsor();
        verificationStep3();
    }
});

function setListnerSponsor () {
    let sponsorInputs = containerSponsor.querySelectorAll('input');
    sponsorInputs.forEach((input, index) => {
        input.addEventListener('input', function(e) {
            sponsors[index] = e.target.value;
            verificationStep3();
        });
    });

    let removeBtns = containerSponsor.querySelectorAll('.remove_sponsor');
    removeBtns.forEach((btn, index) => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            sponsors.splice(index + 1, 1);
            renderSponsors();
            setListnerSponsor();
            verificationStep3();
        });
    });
}

function renderSponsors() {
    let html = ''
        sponsors.forEach((sponsor, index) => {
            html += `
                    <div class="sponsor_item">
                    <input type="text" id="sponsor${index+1}" name="sponsor${index+1}" value="${sponsor}" placeholder="">
                `;

            html += index > 0 ? `
                    <div class="remove_sponsor">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                ` : ``;
            
            html += `</div>`;
        });
    containerSponsor.innerHTML = html;
}

function verifySponsors() {
    let isComplete = true;
    sponsors.forEach((sponsor, index) => {
        if(sponsor == ""){
            isComplete = false;
            return isComplete;
        }
    });
    return isComplete;
}

function verificationStep3 () {
    if(isKnowStyle){
        if(verifySponsors() && textInputStep3[0].value != "" && textInputStep3[1].value != "" && Quest3Yes.children[0].value != ""){
            steps[2].classList.add('complete');
        }else{
            steps[2].classList.remove('complete');
        }
    }else{
        let checkedLenght = Quest3No.querySelectorAll('input[type="checkbox"]:checked').length;
        if(verifySponsors() && textInputStep3[0].value != "" && textInputStep3[1].value != "" && checkedLenght == 3){
            steps[2].classList.add('complete');
        }else{
            steps[2].classList.remove('complete');
        }
    }
}

setPrice();
setListnerSponsor();
</script>

