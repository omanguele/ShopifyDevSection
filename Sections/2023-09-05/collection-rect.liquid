<style>
   #shopify-section-{{ section.id }} #coll_rect8050509032{
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100%;
      padding: 80px 0;
      background-color: {{ section.settings.bg_color }};
  }
   #shopify-section-{{ section.id }} #coll_rect8050509032 .container{
      display: flex;
      flex-direction: column;
  }
   #shopify-section-{{ section.id }} #coll_rect8050509032 .container .cards_container{
      display: grid;
      grid-template-columns: auto auto;
  }
   #shopify-section-{{ section.id }} #coll_rect8050509032 .container h1{
      font-size: 25px;
      padding-bottom: 8px;
      margin-left: 12px;
      color: {{ section.settings.heading_color }};
  }
   #shopify-section-{{ section.id }} #coll_rect8050509032 .container .cards_container .card_cover{
      display: inline-block;
      margin: 12px;
  }
   #shopify-section-{{ section.id }} #coll_rect8050509032 .container .cards_container .card_cover .card{
      position: relative;
      display: inline-flex;
      transition: all ease-out 0.4s;
      overflow: hidden;
      width: 570px;
      height: 300px;
  }
   #shopify-section-{{ section.id }} #coll_rect8050509032 .container .cards_container .card_cover .card img{
      transition: transform ease-out 0.4s;
      width: 100%;
      height: 100%;
      object-fit: cover;
  }
   #shopify-section-{{ section.id }} #coll_rect8050509032 .container .cards_container .card_cover .card a.card_link{
      transition: all ease-out 0.4s;
  }
   #shopify-section-{{ section.id }} #coll_rect8050509032 .container .cards_container .card_cover .card:hover a.card_link{
      background-color:  {{ section.settings.hover_btn_bg_color }};
      color:  {{ section.settings.hover_btn_text_color }};
  }
   #shopify-section-{{ section.id }} #coll_rect8050509032 .container .cards_container .card_cover .card:hover img{
      transform: scale(1.2);
  }
   #shopify-section-{{ section.id }} #coll_rect8050509032 .container .cards_container .card_cover .card .card_content{
      position: absolute;
      bottom: 30px;
      left: 30px;
  }
   #shopify-section-{{ section.id }} #coll_rect8050509032 .container .cards_container .card_cover .card h2{
      font-size: 30px;
      margin: 10px 0;
