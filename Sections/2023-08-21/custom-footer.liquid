      }
      #shopify-section-{{ section.id }} #footerboms232810 .footerboms232810_item_inner.logo {
          align-items: center;
      }
  }
</style>

<section id="footerboms232810">
  <div class="footerboms232810_container">
    <div class="footerboms232810_item col_1">
      <div class="footerboms232810_item_inner logo">
        <a href="/" class="footerboms232810_logo">
          <img
            src="{{ section.settings.image | img_url: "master" }}"
            alt=""
          >
        </a>
      </div>
    </div>
    <div class="footerboms232810_item col_2">
      <div class="footerboms232810_item_inner">
        <div class="footerboms232810_header">
          <h2 class="footerboms232810_title">{{ section.settings.heading_1 }}</h2>
          <div class="footerboms232810_subheading">
            {{ section.settings.description_1 }}
          </div>
        </div>
        <div class="footerboms232810_contact_method">
          <ul>
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'contact_method' -%}
                  <li>
                    <a href="{{ block.settings.url }}" target="_blank">
                      <img src="{{ block.settings.icon | img_url: "master" }}" target="_blank" alt="">
                    </a>
                  </li>
              {%- endcase -%}
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
    <div class="footerboms232810_item col_3">
      <div class="footerboms232810_item_inner">
        <div class="footerboms232810_header">
          <h2 class="footerboms232810_title">{{ section.settings.heading_2 }}</h2>
        </div>
        <div class="footerboms232810_menu">
          <ul>
            {%- if section.settings.menu != blank -%}
              {%- for link in section.settings.menu.links -%}
                <li>
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {% endfor %}
            {%- endif -%}
          </ul>
        </div>
      </div>
    </div>
    <div class="footerboms232810_item col_1">
      <div class="footerboms232810_item_inner"></div>
    </div>
    <div class="footerboms232810_item col_2">
      <div class="footerboms232810_item_inner">
        <div class="footerboms232810_header">
          <h2 class="footerboms232810_title">{{ section.settings.heading_3 }}</h2>
        </div>
        <div class="footerboms232810_social_media">
          <ul>
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'social_media' -%}
                  <li>
                    <a href="{{ block.settings.url }}" target="_blank">
                      <img src="{{ block.settings.icon | img_url: "master" }}" target="_blank" alt="">
                    </a>
                  </li>
              {%- endcase -%}
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
    <div class="footerboms232810_item col_3">
      <div class="footerboms232810_item_inner">
        <div class="footerboms232810_header">
          <h2 class="footerboms232810_title">{{ section.settings.heading_4 }}</h2>
        </div>
        <div class="footerboms232810_payment_method">
          <div
            class="payment-methods-list payment-methods-list--auto"
            style="width: 100%;justify-content: center;align-items: center;"
          >
            {% for type in shop.enabled_payment_types %}
              {{ type | payment_type_svg_tag }}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

