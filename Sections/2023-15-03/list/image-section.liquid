<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
>
<style>

  #shopify-section-{{ section.id }} #avisclient231103 {
    font-family: "Poppins", sans-serif;
    background-color: {{ section.settings.bg-color }};
    height: 100%;
    width: 100%;
  }
  #shopify-section-{{ section.id }} #avisclient231103 p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin: 0;
  }

  #shopify-section-{{ section.id }} #avisclient231103 .container {
    display: flex;
    flex-direction: row;
    width: 100%;
    height:100%;
  }
  #shopify-section-{{ section.id }} #avisclient231103 .container img {
    width: 50%;
    height: 100%;
    object-fit: cover;
  }

  @media (max-width: 1100px) {
      #shopify-section-{{ section.id }} #avisclient231103 .container {
    display: flex;
    flex-direction: column;
    height:100%;
    width: 100%;
  }
  #shopify-section-{{ section.id }} #avisclient231103 .container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  }
  
</style>
<section id="avisclient231103">
  <div class="container">
    {% for block in section.blocks %}
      <img src="{{ block.settings.image | img_url: "master" }}" alt="image">
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Section Avis",
  "blocks": [
    {
      "type": "item",
      "name": "image",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "color",
      "id": "bg-color",
      "label": "Couleur de fond",
      "default": "#fff"
    }

  ],
     "presets":[
        {
          "name":"Section FAQ"
        }
     ]
}
{% endschema %}