
<style>
#shopify-section-{{ section.id }} #image_row22032023 {
  width: 100%;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  display: flex;
  overflow: hidden;
}
#shopify-section-{{ section.id }} #image_row22032023 .container {
  width: 100%;
  display: flex;
  margin: auto;
  padding: 70px;
  height: 100%;
  flex-direction: column;
  background-color: {{section.settings.bg-color}}
}
#shopify-section-{{ section.id }} #image_row22032023 .container .header-wrapper {
  display: flex;
  gap: 5px;
  margin: auto;
  flex-direction: column;
}
#shopify-section-{{ section.id }} #image_row22032023 .container .header-wrapper h2 {
  font-weight: bold;
  font-size: 30px;
  color: {{ section.settings.title-color }}};
  margin: 0;
}
#shopify-section-{{ section.id }} #image_row22032023 .container .header-wrapper .link {
  font-weight: bold;
  font-size: 12px;
  margin: 0;
  color: {{ section.settings.subtitle-color }};
  text-align: center;
}

#shopify-section-{{ section.id }} #image_row22032023 .container .row-wrapper {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 40px;
}
#shopify-section-{{ section.id }} #image_row22032023 .container .row-wrapper .col-wrapper {
  display: flex;
  flex-direction: column;
  width: 150px;
  gap: 5px;
}
#shopify-section-{{ section.id }} #image_row22032023 .container .row-wrapper .col-wrapper img {
  width: 80%;
  height: 100px;
  border-radius: 5px;
  -webkit-box-shadow: -1px -1px 9px -2px rgba(0, 0, 0, 0.52);
  -moz-box-shadow: -1px -1px 9px -2px rgba(0, 0, 0, 0.52);
  box-shadow: -1px -1px 9px -2px rgba(0, 0, 0, 0.52);
  object-fit: cover;
  margin-bottom: 5px;
  margin: auto;
}
#shopify-section-{{ section.id }} #image_row22032023 .container .row-wrapper .col-wrapper p {
  color: {{ section.settings.text-color }};
  margin: 0;
  text-align: center;
  font-size: 12px;
}

@media (max-width: 769px) {
  #shopify-section-{{ section.id }} #image_row22032023 .container {
    width: 100%;
    padding: 10px 20px 10px 20px;
    display: flex;
    margin: auto;
    position: relative;
    align-items: center;
  }
  #shopify-section-{{ section.id }} #image_row22032023 .container .row-wrapper {
    display: flex;
    width: 100%;
    flex-wrap: wrap;
    padding: 10px;
    gap: 20px;
    margin: 40px auto;
  }
}

</style>
    <section id="image_row22032023">
      <div class="container">
        <div class="header-wrapper">
          <h2>{{ section.settings.title }}</h2>
          <a href={{ section.settings.link }} class="link"> {{ section.settings.link-text }}</a>
        </div>
        <div class="row-wrapper">
          {% for block in section.blocks %}
            <div class="col-wrapper">
              <img src="{{ block.settings.image | img_url: "master" }}" alt="" />
              <p>{{ block.settings.name }}</p>
              <p>{{ block.settings.pseudo }}</p>
            </div>
          {% endfor %}
        </div>
      </div>
    </section>
{% schema %}
{
  "name": "Section Temoignages",
  "blocks": [
    {
      "type": "item",
      "name": "Bloc",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Nom",
          "default": "Virginie"
        },
        {
          "type": "text",
          "id": "pseudo",
          "label": "Pseudo",
          "default": "@mum-arc-en-ciel"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "color",
      "id": "bg-color",
      "label": "Couleur de fond",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "text-color",
      "label": "Couleur du texte",
      "default": "#A11F08"
    },
    {
      "type": "color",
      "id": "title-color",
      "label": "Couleur du titre",
      "default": "#0e0e0e"
    },
    {
      "type": "color",
      "id": "subtitle-color",
      "label": "Couleur du sous-titre",
      "default": "#0e0e0e"
    },
    {
      "type":"text",
      "id":"title",
      "label":"Titre",
      "default":"Nos izy parents"
    },
    {
      "type":"text",
      "id":"link-text",
      "label":"Texte du lien",
      "default":"Voir plus"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Lien",
      "default": "/"
    }
   
  ],
  "presets": [
    {
      "name": "Temoignages",
      "category": "Custom Ss"
    }
  ]
}
{% endschema %}