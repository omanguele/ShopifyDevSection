  white-space: nowrap;
  background: none;
  border: none;
  padding: 0;
  cursor: pointer;
}
#shopify-section-{{ section.id }} #text_row22032023 svg {
  border: none
}
@media (max-width: 769px) {
  #shopify-section-{{ section.id }} #text_row22032023 .container {
    width: 100%;
  }
}

  
