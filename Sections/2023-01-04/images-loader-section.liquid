    color: #fff;
    text-transform: uppercase;
    z-index: 100;
    transition: linear 0.5s;
  }
}

</style>

  
 <section id="imagesection230104">
      <div class="container">
        <h1 class="heading">{{ section.settings.title }}</h1>
        <div class="cover-wrapper">
          <h1 >{{ section.settings.header }}</h1>
          <div class="cover">
            <img src="{{ section.settings.left-image | img_url: "master" }}" class="left" alt="" />
            <p>{{ section.settings.text-left }}</p>
          </div>
          <div class="cover">
            <img src="{{ section.settings.right-image | img_url: "master" }}" class="right" alt="" />
            <p>{{ section.settings.text-right }}</p>
          </div>
        </div>
      </div>
    </section>

    <script type="text/javascript">
      let heading = document.querySelector(".heading");
      let cover_wrapper = document.querySelector(".cover-wrapper");
      let cover_left = document.querySelector(".left");
      let cover_right = document.querySelector(".right");

      setTimeout(() => {
        heading.style.opacity = "0";
        cover_wrapper.style.opacity = "1";
      }, 1000);
      setTimeout(() => {
        cover_left.className = "shrink-1";
        cover_right.className = "shrink-2";
      }, 1500);
    </script>

