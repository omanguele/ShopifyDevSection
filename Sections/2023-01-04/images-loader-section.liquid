
<style>

#shopify-section-{{ section.id }} #imagesection230104 {
  width: 100%;
  position: relative;
}

#shopify-section-{{ section.id }} #imagesection230104 .container {
  margin: 0 auto;
  background-color: {{ section.settings.bg-color }};
  width: 100%;
  height: 95vh;
}
#shopify-section-{{ section.id }} #imagesection230104 .container .cover-wrapper {
  display: flex;
  width: 100%;
  height: 100%;
  position: absolute;
  margin: 0 auto;
  transition: ease-in 0.5s;
  opacity: 0;
}
#shopify-section-{{ section.id }} #imagesection230104 .container .cover-wrapper h1 {
  position: absolute;
  right: 50%;
  top: 10%;
  transform: translate(50%, -50%);
  font-size: 20px;
  color: {{ section.settings.title-color }};
  text-transform: uppercase;
  z-index: 100;
  transition: linear 0.5s;
}
#shopify-section-{{ section.id }} #imagesection230104 .container .cover-wrapper {
  display: flex;
  width: 100%;
  height: 100%;
  position: absolute;
  margin: 0 auto;
  transition: ease-in 0.5s;
  opacity: 0;
}
#shopify-section-{{ section.id }} #imagesection230104 .container .cover-wrapper .cover {
  height: 100%;
  width: 50%;
  position: relative;
  transition: ease-in 2s;
}

#shopify-section-{{ section.id }} #imagesection230104 .container .cover-wrapper .cover .left {
  position: absolute;
  height: 100%;
  width: 92%;
  object-fit: cover;
}
#shopify-section-{{ section.id }} #imagesection230104 .shrink-1 {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: left;
  transition: width 0.5s;
  top: 0;
  left: 0;
}
#shopify-section-{{ section.id }} #imagesection230104 .shrink-2 {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: right;
  transition: width 0.5s;
  top: 0;
  right: 0;
}
#shopify-section-{{ section.id }} #imagesection230104 .container .cover-wrapper .cover .right {
  position: absolute;
  height: 100%;
  width: 92%;
  object-fit: cover;
}
#shopify-section-{{ section.id }} #imagesection230104 .container .cover-wrapper .cover p {
  position: absolute;
  right: 50%;
  top: 50%;
  transform: translate(50%, -50%);
  text-transform: uppercase;
  font-size: 30px;
  font-weight: bold;
  color: {{ section.settings.text-color }};
  cursor: pointer;
  transition: ease-in 0.5s;
}

#shopify-section-{{ section.id }} #imagesection230104 .container .cover-wrapper .cover p:after {
  background: none repeat scroll 0 0 transparent;
  bottom: 0;
  content: "";
  display: block;
  height: 2px;
  left: 50%;
  position: absolute;
  background: #fff;
  transition: width 0.3s ease 0s, left 0.3s ease 0s;
  width: 0;
}
#shopify-section-{{ section.id }} #imagesection230104 .container .cover-wrapper .cover p:hover:after {
  width: 100%;
  left: 0;
}
#shopify-section-{{ section.id }} #imagesection230104 .container .cover-wrapper .cover p:hover {
  letter-spacing: 2px;
  transition: ease-in 0.5s;
}

#shopify-section-{{ section.id }} #imagesection230104 .container .heading {
  position: absolute;
  right: 50%;
  top: 50%;
  transform: translate(50%, -50%);
  font-size: 80px;
  color: {{ section.settings.heading-color}}
  text-transform: uppercase;
  transition: ease-in 0.5s;
}

