<script>
  const tabsHeaderItems = Array.from(document.querySelectorAll('#tabssection090323 .tabs_header .tabs_header_item'));
  const tabsBodyItems = Array.from(document.querySelectorAll('#tabssection090323 .tabs_body .tabs_body_item'));

  tabsHeaderItems.forEach((hItem, hIndex) => {
      hItem.addEventListener('click', (e) => {onItemHeaderClick(e, hIndex)});
  });

  function onItemHeaderClick(e, index) {
        tabsHeaderItems.forEach((bItem, bIndex) => {
            if(index === bIndex){
                tabsHeaderItems[bIndex].setAttribute('aria-selected', 'true');
                tabsBodyItems[bIndex].setAttribute('aria-selected', 'true');
            }else{
                tabsHeaderItems[bIndex].removeAttribute('aria-selected');
                tabsBodyItems[bIndex].removeAttribute('aria-selected');
            }
        });
}
</script>

