<style>
  #tabssection090323 {
    width: 100%;
    height: 100%;
    position: relative;
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
}

#tabssection090323 .tabs_container {
    width: 100%;
    height: 100%;
    padding: 40px 20px;
    max-width: 1500px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

#tabssection090323 .tabs_container .tabs_header {
    display: flex;
    justify-content: center;
    align-items: center;
    max-width: 60%;
    width: 100%;
    position: relative;
    border-bottom: 1px solid gray;
    gap: 100px;
    padding: 30px 0;
}

#tabssection090323 .tabs_header .tabs_header_item {
    font-weight: 500;
    font-style: normal;
    font-size: 16px;
    text-transform: uppercase;
    cursor: pointer;
    transition: .3s;
}

#tabssection090323 .tabs_header .tabs_header_item[aria-selected] {
    text-decoration: underline;
}

#tabssection090323 .tabs_container .tabs_body {
    width: 100%;
    height: auto;
    padding: 50px 0; 
    overflow: hidden;
}

#tabssection090323 .tabs_body .tabs_body_item {
    font-size: 14px;
    line-height: 1.5;
    letter-spacing: 1px;
    transition: all .3s;
    display: none;
}

#tabssection090323 .tabs_body .tabs_body_item[aria-selected] {
    display: block;
}

#tabssection090323 .image_wrapper {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 60px;
}

#tabssection090323 .image_text_item {
  width: 100%;
}

#tabssection090323 .image_text_item .image_container{
  position: relative;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: #fff !important;
  min-height: 500px;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  padding: 30px 10px;
  text-align: center;
}

#tabssection090323 .image_container .title {
  color: #fff;
  text-transform: lowercase;
  font-size: 50px;
  font-weight: bold;
  line-height: 1;
  margin: 0;
}

#tabssection090323 .image_container  .subtitle {
  color: #fff;
  text-transform: lowercase;
  font-weight: bold;
  font-size: 30px;
  margin: 0;
}

#tabssection090323 .image_container .desc {
  color: #fff;
  text-transform: uppercase;
  font-size: 14px;
  margin: 0;
  font-weight: 600;
  margin-top: 20px;
}

#tabssection090323 .image_text_item .text_container {
  margin-top: 20px;
  text-transform: uppercase;
  letter-spacing: 2px;
  
}

#tabssection090323 .image_text_item .text_container .type {
  margin-bottom: 3px;
  font-size: 14px;
  color: {{ section.settings.collection_color }};
}

#tabssection090323 .image_text_item .text_container .link {
  font-size: 16px;
  color: {{ section.settings.text_color }};
}

@media only screen and (max-width: 1024px) {
  #tabssection090323 .tabs_container .tabs_header {
    gap: 60px;
    max-width: 80%;
    padding: 25px 0;
  }

  #tabssection090323 .image_wrapper {
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 60px;
  }

  #tabssection090323 .image_container .title {
    font-size: 40px;
  }

  #tabssection090323 .image_container  .subtitle {
    font-size: 20px;
  }
  
  #tabssection090323 .image_container .desc {
    font-size: 12px;
    margin-top: 15px;
  }

  #tabssection090323 .image_text_item .image_container{
    min-height: 400px;
  }

}

@media only screen and (max-width: 780px) {
    #tabssection090323 .tabs_body .tabs_body_item {
        font-size: 12px;
    }
    #tabssection090323 .tabs_header .tabs_header_item {
        font-size: 12px;
    }
    #tabssection090323 .tabs_container .tabs_header {
        gap: 40px;
        max-width: 100%;
        padding: 20px 0;
    }
    #tabssection090323 .image_wrapper {
      grid-template-columns: repeat(1, minmax(0, 1fr));
      gap: 40px;
    }
    #tabssection090323 .image_text_item .text_container .type {
      margin-bottom: 3px;
      font-size: 11px;
    }
    
    #tabssection090323 .image_text_item .text_container .link {
      font-size: 13px;
    }

    #tabssection090323 .image_container .title {
      font-size: 35px;
    }
  
    #tabssection090323 .image_container  .subtitle {
      font-size: 18px;
    }
    
    #tabssection090323 .image_container .desc {
      font-size: 10px;
    }

    #tabssection090323 .image_text_item .image_container{
      min-height: 300px;
    }
}
</style>

