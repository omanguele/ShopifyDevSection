<style>
  #shopify-section-{{ section.id }} #imagetextbtn2451210132 {
      position: relative;
      width: 100%;
      background-color: {{ section.settings.bg_color }};
  }
  #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_container {
      margin: 0 auto;
      position: relative;
      width: 100%;
      max-width: 1280px;
      display: flex;
      align-items: stretch;
  }
  #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_container.left {
      flex-direction: row;
  }
  #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_container.left {
      flex-direction: row-reverse;
  }
  #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_image {
      width: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: {{ section.settings.radius }}px;
      overflow: hidden;
      margin: 0 6px;
  }
  #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_image img {
      display: block;
      width: 100%;
      height: auto;
      object-fit: cover;
  }
  #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_content {
      padding: 0 6px;
      width: 33.3333333333%;
      margin: 0 8.3333333333%;
      display: block;
  }
  #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_content_container {
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
  }
  #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_btn {
      min-width: 140px;
      border-radius: 8px;
      line-height: 1.2;
      font-size: 14px;
      font-weight: 600;
    background-color: {{ section.settings.btn_bg_color }};
    color: {{ section.settings.btn_text_color }};
      border: 1px solid {{ section.settings.btn_border_color }};
      box-shadow: none;
      text-align: center;
      padding: 16px 22px;
      cursor: pointer;
      transition: all 150ms linear;
      align-self: flex-start;
      text-decoration: none;
  }
  #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_btn:hover {
      background-color: {{ section.settings.hover_btn_bg_color }};
      color: {{ section.settings.hover_btn_text_color }};
      border-color: {{ section.settings.hover_btn_border_color }};
  }
  #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_description {
      margin-bottom: 50px;
      font-weight: 400;
      line-height: 1.5;
      font-size: 16px;
      color: {{ section.settings.text_color }};
      word-break: break-word;
  }
  #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_heading {
      font-weight: 600;
      color: {{ section.settings.text_color }};
      font-size: 44px;
      margin-bottom: 24px;
      word-break: break-word;
      line-height: 1.125;
  }
  @media only screen and (max-width: 1024px)  {
      #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_content {
          width: 41.66667%;
          margin-right: 0;
      }
      #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_description {
          font-size: 14px;
      }
      #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_heading {
          font-size: 26px;
      }
  }

  @media only screen and (max-width: 740px)  {
      #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_container {
          flex-direction: column;
      }
      #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_image {
          width: 100%;
          border-radius: 0;
          margin: 0;
      }
      #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_content {
          width: 100%;
          margin: 0;
          margin-top: 28px;
          padding: 0 28px;
      }
      #shopify-section-{{ section.id }} #imagetextbtn2451210132 .imagetextbtn2451210132_description {
          margin-bottom: 30px;
      }
      #shopify-section-{{ section.id }} #imagetextbtn2451210132  .hide_mobile {
          display: none !important;
      }
  }
</style>

<section id="imagetextbtn2451210132">
  <div class="imagetextbtn2451210132_container {{ section.settings.image_alignment }}">
    <div class="imagetextbtn2451210132_image {% if section.settings.show_image_mobile %} hide_mobile {% endif %}">
      <img src="{{ section.settings.image | img_url: "master" }}" alt="">
    </div>
    <div class="imagetextbtn2451210132_content">
      <div class="imagetextbtn2451210132_content_container">
        <h2 class="imagetextbtn2451210132_heading">
          {{ section.settings.title }}
        </h2>
        <p class="imagetextbtn2451210132_description">
          {{ section.settings.subtitle }}
        </p>
        <a href="{{ section.settings.url_btn }}" class="imagetextbtn2451210132_btn">{{ section.settings.text_btn }}</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image - Texte - Bouton",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Couleur de fond de la section",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur de texte",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "btn_border_color",
      "label": "Couleur de bordure du bouton",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Couleur de texte du bouton",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Couleur de fond du bouton",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "hover_btn_text_color",
      "label": "Couleur de texte du bouton au survol",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "hover_btn_border_color",
      "label": "Couleur de bordure du bouton au survol",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "hover_btn_bg_color",
      "label": "Couleur de fond du bouton au survol",
      "default": "#fff"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "shake up a smoothie in seconds"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sous Titre",
      "default": "How it works"
    },
    {
      "type": "text",
      "id": "text_btn",
      "label": "Texte du bouton",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "url_btn",
      "label": "Lien du bouton"
    },
    {
      "type": "select",
      "id": "image_alignment",
      "label": "Alignement de l'image",
      "options": [
        {
          "value": "left",
          "label": "Droite"
        },
        {
          "value": "right",
          "label": "Gauche"
        }
      ],
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "show_image_mobile",
      "label": "Afficher l'image sur mobile",
      "default": true
    },
    {
      "type": "range",
      "id": "radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bordure arrondie",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Image - Texte - Bouton"
    }
  ]
}
{% endschema %}
