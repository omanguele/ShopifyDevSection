<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"
>
<style>
  #shopify-section-{{ section.id }} #client_reviews14300290 {
    padding: 50px 10px;
    background-color:{{ section.settings.bg_color }};
    width: 100%;
    position: relative;
    overflow: hidden;
  }
  #shopify-section-{{ section.id }} #client_reviews14300290 .client_reviews14300290_container {
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    flex-direction: column;
    position: relative;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
  }
  #shopify-section-{{ section.id }} #client_reviews14300290 .client_reviews14300290_container h1 {
    font-size: 34px;
    margin-bottom: 15px;
    font-weight: 700;
    color:{{ section.settings.text_color }};
  }
  #shopify-section-{{ section.id }} #client_reviews14300290 .client_reviews14300290_container h3 {
    font-size: 17px;
    margin-bottom: 20px;
    font-weight: 500;
    color:{{ section.settings.text_color }};
  }
  #shopify-section-{{ section.id }} #client_reviews14300290 .swiper,
  #shopify-section-{{ section.id }} #client_reviews14300290 .swiper-wrapper {
    width: 100%;
    height: 100%;
  }
  #shopify-section-{{ section.id }} #client_reviews14300290 .review_card {
    padding: 30px;
    border-radius: 10px;
    background-color:{{ section.settings.card_color }};
    height: fit-content;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
  }
  #shopify-section-{{ section.id }} #client_reviews14300290 .review_card .stars {
    margin: 20px 0;
    color: {{ section.settings.start_color }};
  }
  #shopify-section-{{ section.id }} #client_reviews14300290 .review_card h4 {
    margin-bottom: 8px;
    font-size: 18px;
    color:{{ section.settings.text_color }};
  }
  #shopify-section-{{ section.id }} #client_reviews14300290 .review_card .content {
    margin-bottom: 20px;
    font-size: 15px;
    text-align: justify;
    flex-grow: 1;
    color:{{ section.settings.text_color }};
  }
  #shopify-section-{{ section.id }} #client_reviews14300290 .review_card .author {
    margin-top: 20px;
    color: {{ section.settings.name_color }};
  }

  @media only screen and (max-width: 780px) {
  #shopify-section-{{ section.id }} #client_reviews14300290 .swiper-slide {
    height:auto;
  }
  #shopify-section-{{ section.id }} #client_reviews14300290 .swiper-wrapper {
  align-items: stretch;
  }
  #shopify-section-{{ section.id }} #client_reviews14300290 .review_card {
    height: 100%;
  }
   #shopify-section-{{ section.id }} #client_reviews14300290 .client_reviews14300290_container h1 {
    font-size: 20px;
  }
  #shopify-section-{{ section.id }} #client_reviews14300290 .client_reviews14300290_container h3 {
    font-size: 14px;
  }
  #shopify-section-{{ section.id }} #client_reviews14300290 .review_card h4 {
    font-size: 14px;
  }
  #shopify-section-{{ section.id }} #client_reviews14300290 .review_card .content {
    font-size: 12px;
  }
  }
</style>

<section id="client_reviews14300290">
  <div class="client_reviews14300290_container">
    <h1>{{ section.settings.heading }}</h1>
    <h3>
      {{ section.settings.subheading }}
    </h3>
    <section class="swiper-client_reviews14300290 swiper">
      <section class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="review_card">
              <div class="stars">
                {% for i in (1..block.settings.nb_star) %}
                  <span>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      width="12"
                      height="12"
                    >
                      <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                    </svg>
                  </span>
                {% endfor %}
              </div>
              <h4>{{ block.settings.heading }}</h4>
              <p class="content">
                {{ block.settings.message }}
              </p>
              <p class="author">{{ block.settings.name }}</p>
            </div>
          </div>
        {% endfor %}
      </section>
    </section>
  </div>
</section>
<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
<script>
  new Swiper("#shopify-section-{{ section.id }} #client_reviews14300290 .swiper-client_reviews14300290", {
    slidesPerView: 1,
    spaceBetween: 10,
    grab: true,
    breakpoints: {
      320: {
        slidesPerView: 1,
        spaceBetween: 10,
      },
      640: {
        slidesPerView: 2,
        spaceBetween: 30,
      },
      920: {
        slidesPerView: 3,
        spaceBetween: 30,
      },
    },
  });
</script>

{% schema %}
  {
    "name": "Slide Review",
    "blocks": [
    {
    "type": "item",
    "name": "item",
    "settings": [
      {
        "type": "range",
        "id": "nb_star",
        "min": 0,
        "max": 5,
        "step": 1,
        "unit": "s",
        "label": "Nombre d'étoile",
        "default": 5
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Titre"
      },
      {
        "type": "textarea",
        "id": "message",
        "label": "Message"
      },
      {
        "type": "text",
        "id": "name",
        "label": "Nom"
      }
    ]
  }
],
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Couleur de fond de la section",
        "default": "#f2f2f2"
      },
      {
        "type": "color",
        "id": "card_color",
        "label": "Couleur des cartes",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Couleur de Texte",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "name_color",
        "label": "Couleur de nom",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "start_color",
        "label": "Couleur des étoiles",
        "default": "#000"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Titre",
        "default": "Lounge"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "Sous Titre",
        "default": "Lounge"
      }
    ],
    "presets": [
      {
        "name": "Slide Review"
      }
    ]
  }
{% endschema %}
