<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"
>
<style>
  #shopify-section-{{ section.id }} #explore_accessory50400290 {
    padding: 50px 10px;
    background-color:{{ section.settings.bg_color }};
  }

  #shopify-section-{{ section.id }} #explore_accessory50400290 .explore_accessory50400290_container {
    width: 100%;
    margin: 0 auto;
    max-width: 1200px;
    overflow: hidden;
  }
  #shopify-section-{{ section.id }} #explore_accessory50400290 .explore_accessory50400290_container h1 {
    font-size: 34px;
    margin-bottom: 10px;
    font-weight: 700;
    color:{{ section.settings.text_color }};
  }
  #shopify-section-{{ section.id }} #explore_accessory50400290 .explore_accessory50400290_container h3 {
    font-size: 17px;
    font-weight: 500;
    margin-bottom: 20px;
    color:{{ section.settings.text_color }};
  }
  #shopify-section-{{ section.id }} #explore_accessory50400290 .review_card {
    display: block;
    text-decoration: none;
  }
  #shopify-section-{{ section.id }} #explore_accessory50400290 .review_card:hover img {
    transform: scale(1.05);
  }
  #shopify-section-{{ section.id }} #explore_accessory50400290 .review_card .review_card_img {
    overflow: hidden;
    border-radius: 16px;
  }
  #shopify-section-{{ section.id }} #explore_accessory50400290 .review_card .review_card_img img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 16px;
    transition: transform 0.3s ease-out;
  }
  #shopify-section-{{ section.id }} #explore_accessory50400290 .review_card h2 {
    font-size: 17px;
    font-weight: 500;
    text-align: center;
    margin-top: 15px;
    color:{{ section.settings.text_color }};
  }
  @media only screen and (max-width: 780px) {
  #shopify-section-{{ section.id }} #explore_accessory50400290 .explore_accessory50400290_container h1 {
    font-size: 20px;
  }
  #shopify-section-{{ section.id }} #explore_accessory50400290 .explore_accessory50400290_container h3 {
    font-size: 14px;
  }
    #shopify-section-{{ section.id }} #explore_accessory50400290 .review_card h2 {
    font-size: 14px;
    }
  }
</style>

<section id="explore_accessory50400290">
  <div class="explore_accessory50400290_container">
    <h1>{{ section.settings.heading }}</h1>
    <h3>
      {{ section.settings.subheading }}
    </h3>
    <section class="swiper-explore_accessory50400290 swiper">
      <section class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <a href="{{ section.settings.url }}" class="review_card">
              <div class="review_card_img">
                <img
                  src="{{ block.settings.image | img_url: "master" }}"
                  alt=""
                >
              </div>
              <h2>F{{ section.settings.text }}</h2>
            </a>
          </div>
        {% endfor %}
      </section>
    </section>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
<script>
  new Swiper("#shopify-section-{{ section.id }} #explore_accessory50400290 .swiper-explore_accessory50400290", {
    keyboard: {
      enabled: true,
    },
    slidesPerView: 1.2,
    spaceBetween: 25,
    direction: "horizontal",
    breakpoints: {
        320: {
        slidesPerView: 1.2,
        spaceBetween: 25,
      },
      640: {
        slidesPerView: 4,
        spaceBetween: 25,
      },
    },
  });
</script>

{% schema %}
  {
    "name": "Slide Image",
     "blocks": [
    {
    "type": "item",
    "name": "item",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "image"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Texte"
      }
    ]
  }
],
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Couleur de fond de la section",
        "default": "#f2f2f2"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Couleur de Texte",
        "default": "#000"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Titre",
        "default": "Lounge"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "Sous Titre",
        "default": "Lounge"
      }
    ],
    "presets": [
      {
        "name": "Slide Image"
      }
    ]
  }
{% endschema %}
