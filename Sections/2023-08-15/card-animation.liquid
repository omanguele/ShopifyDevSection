<style>
  #shopify-section-{{ section.id }} {
    background: {{ section.settings.bg_color }};
  }
    #shopify-section-{{ section.id }} #somecardxboms105823 {
        width: 100%;
        display: grid;
        grid-template-columns: repeat(1, minmax(0, 1fr));
        align-content: center;
        padding: {{ section.settings.mobile_top_spacing }}px {{ section.settings.mobile_left_spacing }}px {{ section.settings.mobile_bottom_spacing }}px {{ section.settings.mobile_right_spacing }}px;
        gap: 24px;
    }
    #shopify-section-{{ section.id }} #somecardxboms105823  .somecardxboms105823_card {
        display: flex;
        margin-bottom: 0;
        align-items: stretch;
        justify-content: center;
        flex-direction: row;
        text-decoration: none;
        color: inherit;
        min-height: 190px;
    }
    #shopify-section-{{ section.id }} #somecardxboms105823  .somecardxboms105823_card.reverse {
        flex-direction: row-reverse;
    }
    #shopify-section-{{ section.id }} #somecardxboms105823  .somecardxboms105823_text {
        flex-direction: column;
        text-align: center;
        overflow: hidden;
        height: auto;
        flex-grow: 1;
        padding: 20px 10px;
        font-size: 14px;
        line-height: 20px;
        display: flex;
        justify-content: center;
        text-align: center !important;
        width: 50%;
    }
    #shopify-section-{{ section.id }} #somecardxboms105823  .somecardxboms105823_image img {
        max-width: 100%;
        height: 100%;
        width: 100%;
        object-fit: cover;
        object-position: center;
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
    }
    #shopify-section-{{ section.id }} #somecardxboms105823  .somecardxboms105823_image {
        overflow: hidden;
        position: relative;
        transition: padding-top .3s;
        width: 50%;
        padding-top: 50%;
        height: unset;
    }
    #shopify-section-{{ section.id }} #somecardxboms105823 .somecardxboms105823_title {
        font-style: normal;
        text-transform: uppercase;
        font-size: 14px;
        margin-bottom: 14px;
        text-align: center;
        color: {{ section.settings.text_color }};
    }
    #shopify-section-{{ section.id }} #somecardxboms105823 .somecardxboms105823_message p {
        font-size: 12px;
        line-height: 20px;
        text-align: center;
        margin-bottom: 13px;
        color: {{ section.settings.text_color }};
    }
    #shopify-section-{{ section.id }} #somecardxboms105823  .somecardxboms105823_cta {
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center !important;
    }
    #shopify-section-{{ section.id }} #somecardxboms105823 .somecardxboms105823_cta span {
        font-size: 10px;
        font-weight: 700;
        font-style: normal;
        letter-spacing: normal;
        text-transform: uppercase;
        display: inline-flex;
        align-items: center;
        margin-right: 5px;
        color: {{ section.settings.text_color }};
    }
    #shopify-section-{{ section.id }} #somecardxboms105823  .somecardxboms105823_image_inner {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
    @media only screen and (min-width: 780px) {
        #shopify-section-{{ section.id }} #somecardxboms105823 {
            grid-template-columns: repeat({{ section.settings.perview }}, minmax(0, 1fr));
             padding: {{ section.settings.desktop_top_spacing }}px {{ section.settings.desktop_left_spacing }}px {{ section.settings.desktop_bottom_spacing }}px {{ section.settings.desktop_right_spacing }}px;
            max-width: {% if section.settings.full_with %} 100% {% else %} {{ section.settings.max_width }}px {% endif %};
            margin: 0 auto;
            gap: 36px;
        }
        #shopify-section-{{ section.id }} #somecardxboms105823  .somecardxboms105823_card ,
        #shopify-section-{{ section.id }} #somecardxboms105823 .somecardxboms105823_card.reverse{
            min-height: 270px;
            flex-direction: column;
        }
        #shopify-section-{{ section.id }} #somecardxboms105823 .somecardxboms105823_card:hover .somecardxboms105823_message {
            height: 32px;
        }
        #shopify-section-{{ section.id }} #somecardxboms105823  .somecardxboms105823_card:hover .somecardxboms105823_image {
            padding-top: 71%;
        }
        #shopify-section-{{ section.id }} #somecardxboms105823  .somecardxboms105823_image {
            width: 100%;
            padding-top: 81%;
        }
        #shopify-section-{{ section.id }} #somecardxboms105823   .somecardxboms105823_message p {
            font-size: 14px;
        }
        #shopify-section-{{ section.id }} #somecardxboms105823 .somecardxboms105823_text {
            justify-content: space-between;
            padding: 26px;
            font-size: 16px;
            width: 100%;
        }
        #shopify-section-{{ section.id }} #somecardxboms105823  .somecardxboms105823_message {
            height: 0;
            overflow: hidden;
            transition: all .3s;
        }
        #shopify-section-{{ section.id }} #somecardxboms105823  .somecardxboms105823_title {
            font-size: 20px;
            margin-bottom: 14px;
        }
        #shopify-section-{{ section.id }} #somecardxboms105823  .somecardxboms105823_cta span {
            font-size: 12px;
        }
    }
</style>

<section id="somecardxboms105823">
  {% for block in section.blocks %}
    <a
      href="{{ block.settings.url }}"
      class="somecardxboms105823_card {{ block.settings.mobile_alignment }}"
      style="background-color: {{ block.settings.bg_color }};"
    >
      <div class="somecardxboms105823_image">
        <div class="somecardxboms105823_image_inner">
          <img src="{{ block.settings.image | img_url: "master" }}" alt="">
        </div>
      </div>
      <div class="somecardxboms105823_text">
        <div class="somecardxboms105823_text_head">
          <h3 class="somecardxboms105823_title">{{ block.settings.heading }}</h3>
          <div class="somecardxboms105823_message">
            <p>{{ block.settings.description }}</p>
          </div>
        </div>
        <div class="somecardxboms105823_cta">
          <span>{{ section.settings.link_text }}</span>
          <svg width="4" height="12" viewBox="0 0 4 12" style="fill: {{ section.settings.text_color }};">
            <path d="M4,6v0l-4,6v0v-12v0z" fill-opacity="1"></path>
          </svg>
        </div>
      </div>
    </a>
  {% endfor %}
</section>

