<style>
  #shopify-section-{{ section.id }} {
    background: {{ section.settings.bg_color }};
  }
     #shopify-section-{{ section.id }} #socialslidercb185320 {
        display: flex;
        width: 100%;
         padding: {{ section.settings.mobile_top_spacing }}px {{ section.settings.mobile_left_spacing }}px {{ section.settings.mobile_bottom_spacing }}px {{ section.settings.mobile_right_spacing }}px;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

     #shopify-section-{{ section.id }} #socialslidercb185320  .swiper {
        width: 100%;
        height: 100%;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_header {
        width: 100%;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_slider {
        width: 100%;
        position: relative;
        margin-top: 20px;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_controls_btn svg {
        width: 35px;
        height: 35px;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_heading {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_heading img {
        height: 30px;
        width: 30px;
        margin-right: 8px;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_heading h2 {
        color: {{ section.settings.text_color }};
        font-style: italic;
        font-weight: 700;
        font-size: 25px;
        line-height: 1.1;
        margin: 0;
        text-transform: uppercase;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_description {
        margin: 16px 0;
        width: 100%;
        font-size: 16px !important;
        color: {{ section.settings.text_color }} !important;
        text-align: center;
        line-height: 1.5;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_slide {
        width: 100%;
        height: 100%;
        display: block;
        border-radius: 3px;
        overflow: hidden;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_slide_img {
        max-width: 100%;
        width: 100%;
        height: auto;
        max-height: 180px;
        object-fit: cover;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_controls {
        width: 100%;
        display: flex;
        justify-content: space-between;
        position: absolute;
        height: 100%;
        z-index: 10;
        align-items: center;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320   .socialslidercb185320_controls_btn {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0 8px;
        background-color: rgba(255, 255, 255, .7);
        cursor: pointer;
        position: absolute;
        z-index: 10;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_controls_next {
        right: 0;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_controls_prev {
        left: 0;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320   .socialslidercb185320_slider_inner_bg{
        background: {{ section.settings.slide_bg_color }};
        width: 100%;
        height: 100%;
        position: absolute;
        bottom: 20%;
        left: 20px;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_slide_overlay {
        position: absolute;
        height: 100%;
        width: 100%;
        top: 0;
        left: 0;
        display: none;
        justify-content: center;
        align-items: center;
        background-color: {{ section.settings.overlay_color }};
        flex-direction: column;
        gap: 20px;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_slide_overlay img{
        height: 29px;
        width: 29px;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_slide:hover .socialslidercb185320_slide_overlay {
        display: flex;
    }
     #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_slide_overlay button {
        width: 100%;
        height: 30px;
        pointer-events: none;
        font-weight: 700 !important;
        text-align: center;
        border: none;
        background-color: {{ section.settings.btn_bg_color }};
        color: {{ section.settings.btn_text_color }};
    }
    @media only screen and (min-width: 1024px) {
         #shopify-section-{{ section.id }} #socialslidercb185320 {
            padding: {{ section.settings.desktop_top_spacing }}px {{ section.settings.desktop_left_spacing }}px {{ section.settings.desktop_bottom_spacing }}px {{ section.settings.desktop_right_spacing }}px;
            max-width: {% if section.settings.full_with %} 100% {% else %} {{ section.settings.max_width }}px {% endif %};
            margin: 0 auto;
            flex-direction: row;
        }
         #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_slide_overlay button {
            width: 90%;
        }
         #shopify-section-{{ section.id }} #socialslidercb185320   .socialslidercb185320_header {
            width: 33.333%;
            padding: 32px;
        }
         #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_slider {
            width: 66.666%;
            margin-top: 0;
        }
         #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_heading img {
            height: 36px;
            width: 36px;
        }
         #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_heading h2 {
            font-size: 30px;
        }
         #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_description {
            font-size: 16px !important;
            text-align: left;
        }
         #shopify-section-{{ section.id }} #socialslidercb185320  .socialslidercb185320_heading {
            justify-content: flex-start;
        }
    }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css">
<section id="socialslidercb185320">
  <div class="socialslidercb185320_header">
    <div class="socialslidercb185320_heading">
      <img src="{{ section.settings.image | img_url: "master" }}" alt="">
      <h2>{{ section.settings.heading }}</h2>
    </div>
    <div class="socialslidercb185320_description">
      {{ section.settings.description }}
    </div>
  </div>
  <div class="socialslidercb185320_slider">
    <div class="socialslidercb185320_slider_inner_bg"></div>

    <div class="socialslidercb185320_controls_btn socialslidercb185320_controls_prev">
      <span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
        </svg>
      </span>
    </div>
    <div class="socialslidercb185320_controls_btn socialslidercb185320_controls_next">
      <span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
        </svg>
      </span>
    </div>
    <div class="swiper socialslidercb185320-swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <a href="{{ block.settings.url }}" class="socialslidercb185320_slide">
              <img class="socialslidercb185320_slide_img" src="{{ block.settings.image | img_url: "master" }}" alt="">
              {% if block.settings.btn_text != blabk %}
                <div class="socialslidercb185320_slide_overlay">
                  <img src="{{ section.settings.image | img_url: "master" }}" alt="">
                  <button type="button">{{ block.settings.btn_text }}</button>
                </div>
              {% endif %}
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
<script>
  
  
        new Swiper(` #shopify-section-{{ section.id }} #socialslidercb185320 .socialslidercb185320-swiper`, {
            spaceBetween: 20,
            slidesPerView: 'auto',
            loop: false,
            freeMode: true,
            allowTouchMove: false,
            autoplay: {
                delay: 2500,
            },
            navigation: {
                nextEl: " #shopify-section-{{ section.id }} #socialslidercb185320 .socialslidercb185320_controls_next",
                prevEl: " #shopify-section-{{ section.id }} #socialslidercb185320 .socialslidercb185320_controls_prev",
            },
            breakpoints: {
                320: {
                slidesPerView: 4.5,
                spaceBetween: 20
                },
                640: {
                slidesPerView: 5.5,
                spaceBetween: 20
                }
            }
        });


</script>

