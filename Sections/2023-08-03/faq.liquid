<style>
  @import url('https://fonts.googleapis.com/css2?family=Sora:wght@100;200;300;400;500;600;700;800&display=swap');

  #shopify-section-{{ section.id }} #faqsectionbx032308 {
      font-family: 'Sora', sans-serif;
      font-size: 14px;
      line-height: 20px;
      margin-top: 0;
      margin-bottom: 0;
      padding: 50px 10%;
    background-color: {{ section.settings.bg_color }};
  }

  #shopify-section-{{ section.id }} #faqsectionbx032308  .faqsectionbx032308_container {
      max-width: 1280px;
      margin-left: auto;
      margin-right: auto;
      padding-left: 0%;
      padding-right: 0%;
  }

  #shopify-section-{{ section.id }} #faqsectionbx032308  .faqsectionbx032308_title {
      font-size: 42px;
      width: 100%;
      max-width: 100%;
      float: none;
      clear: none;
      color: {{ section.settings.title_color }};
      text-align: center;
      white-space: normal;
      object-fit: fill;
      flex-direction: row;
      justify-content: flex-start;
      align-items: flex-start;
      margin-top: 0;
      margin-bottom: 5%;
      margin-left: 0;
      padding: 0 0%;
      font-weight: 700;
      line-height: 54px;
      display: block;
      position: static;
      top: 0;
      left: 0;
      overflow: visible;
  }

  #shopify-section-{{ section.id }} #faqsectionbx032308  .faqsectionbx032308_wrapper {
      max-width: 100%;
      grid-auto-columns: 1fr;
      display: grid;
      grid-template-rows: auto auto auto;
      grid-template-columns: 1fr;
      margin-left: auto;
      margin-right: auto;
      grid-row-gap: 16px;
      grid-column-gap: 16px;
  }

  #shopify-section-{{ section.id }} #faqsectionbx032308 .faqsectionbx032308_wrap_item {
      background-color: {{ section.settings.faq_color }};
      border: 1px solid {{ section.settings.border_color }};
      border-radius: 10px;
      padding: 20px 32px;
      text-decoration: none;
      transition: border-color .2s;
      box-shadow: 70px 23px 96px -32px rgba(85, 85, 124, .08);
      transition: all 600ms;
  }

  #shopify-section-{{ section.id }} #faqsectionbx032308 .faqsectionbx032308_wrap_item.show {
      border-color: {{ section.settings.hl_color }};
  }

  #shopify-section-{{ section.id }} #faqsectionbx032308 .faqsectionbx032308_wrap_item.show  .faqsectionbx032308_wrap_item_title {
      color: {{ section.settings.hl_color }};
  }

  #shopify-section-{{ section.id }} #faqsectionbx032308 .faqsectionbx032308_wrap_item.show .horizontal_line {
      background-color: {{ section.settings.hl_color }};
  }

  #shopify-section-{{ section.id }} #faqsectionbx032308 .faqsectionbx032308_wrap_item.show .vertical_line {
      background-color: {{ section.settings.hl_color }};
      transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(90deg) skew(0deg);
      transform-style: preserve-3d;
  }

  #shopify-section-{{ section.id }} #faqsectionbx032308  .faqsectionbx032308_wrap_item_text {
      color: {{ section.settings.text_color }};
      letter-spacing: -.01em;
      margin-bottom: 0;
      font-family: Inter, sans-serif;
      font-size: 16px;
      font-weight: 300;
      line-height: 24px;
      overflow: hidden;
      height: 0;
      transition: all 500ms;
  }
  #shopify-section-{{ section.id }} #faqsectionbx032308  .faqsectionbx032308_wrap_item_head {
      letter-spacing: -.02em;
      cursor: pointer;
      justify-content: space-between;
      align-items: center;
      font-weight: 500;
      display: flex;
  }
  #shopify-section-{{ section.id }} #faqsectionbx032308  .faqsectionbx032308_wrap_item_title {
      color: {{ section.settings.title_color }};
      font-weight: 700;
      margin-top: 20px;
      margin-bottom: 10px;
      font-size: 24px;
      line-height: 32px;
  }
  #shopify-section-{{ section.id }} #faqsectionbx032308  .faqsectionbx032308_wrap_item_icon {
      width: 13px;
      height: 13px;
      justify-content: center;
      align-items: center;
      display: flex;
      position: relative;
      flex-shrink: 0;
  }
  #shopify-section-{{ section.id }} #faqsectionbx032308  .horizontal_line {
      width: 100%;
      height: 3px;
      background-color: {{ section.settings.text_color }};
      transition: all 500ms;
  }
  #shopify-section-{{ section.id }} #faqsectionbx032308  .vertical_line {
      width: 3px;
      position: absolute;
      height: 100%;
      background-color: {{ section.settings.text_color }};
      transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg);
      transform-style: preserve-3d;
      transition: all 500ms;
  }

  @media only screen and (max-width: 780px)  {
      #shopify-section-{{ section.id }} #faqsectionbx032308  .faqsectionbx032308_title {
          text-align: center;
          font-size: 26px;
          line-height: 32px;
      }
      #shopify-section-{{ section.id }} #faqsectionbx032308  .faqsectionbx032308_wrap_item_title {
          font-size: 20px;
          line-height: 28px;
      }
      #shopify-section-{{ section.id }} #faqsectionbx032308  .faqsectionbx032308_wrap_item_text {
          font-size: 14px;
      }
      #shopify-section-{{ section.id }} #faqsectionbx032308 {
          padding: 50px 8%;
      }
  }
</style>

<section id="faqsectionbx032308">
  <div class="faqsectionbx032308_container">
    <h1 class="faqsectionbx032308_title">
      <span>{{ section.settings.title }}</span>
    </h1>
    <div class="faqsectionbx032308_wrapper">
      {% for block in section.blocks %}
        <div class="faqsectionbx032308_wrap_item">
          <div class="faqsectionbx032308_wrap_item_head">
            <h3 class="faqsectionbx032308_wrap_item_title">{{ block.settings.text }}</h3>
            <div class="faqsectionbx032308_wrap_item_icon">
              <div class="horizontal_line"></div>
              <div class="vertical_line"></div>
            </div>
          </div>
          <p class="faqsectionbx032308_wrap_item_text">
            {{ block.settings.description }}
          </p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script>
  const faqs = Array.from(document.querySelectorAll('#shopify-section-{{ section.id }} #faqsectionbx032308 .faqsectionbx032308_wrapper .faqsectionbx032308_wrap_item'));
      faqs.map((faq) => {
          faq.querySelector('.faqsectionbx032308_wrap_item_head').addEventListener('click', function(e) {
              e.preventDefault();
              let elt = faq.querySelector('.faqsectionbx032308_wrap_item_text');
              if(faq.classList.contains('show')){
                  elt.style.height = '0px';
                  faq.classList.remove('show')
              }else {
                  elt.style.height = elt.scrollHeight + 'px';
                  faq.classList.add('show')
              }
          });
      });
</script>

{% schema %}
  {
  "name": "New Faq",
  "blocks": [
  {
    "type": "faq",
    "name": "Faq",
    "settings": [
      {
        "type": "text",
        "id": "text",
        "label": "Texte",
        "default":"Lorem ipsun..."
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default":"Lorem ipsun..."
      }
    ]
  }
],
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Couleur de fond section",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "faq_color",
      "label": "Couleur de fond faq",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Couleur de bordure faq",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "hl_color",
      "label": "Couleur mise en avant",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Couleur de titre",
      "default": "#A37D5F"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur de texte",
      "default": "#A37D5F"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titre section",
      "default":"faq"
    }
  ],
  "presets": [
