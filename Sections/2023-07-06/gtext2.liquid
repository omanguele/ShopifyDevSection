<style>
  #shopify-section-{{ section.id }} #bggrid3slidmobx  * {
    line-height: normal;
  }
  #shopify-section-{{ section.id }} #bggrid3slidmobx  {
      background-image: url('{{ section.settings.bg_image | img_url: "master" }}');
      background-repeat: no-repeat;
      background-size: cover;
      margin: 20px 0px;
      padding: 70px 40px 70px 40px ;
  }

  #shopify-section-{{ section.id }} #bggrid3slidmobx  .bggrid3slidmobx_wrapper {
      width: 100%;
      text-align: {{ section.settings.alignment }};
      margin: 0 auto;
      max-width: 1300px;
  }

  #shopify-section-{{ section.id }} #bggrid3slidmobx   .bggrid3slidmobx_wrapper_item {
      padding: 20px;
      backdrop-filter: blur(10px);
      color: {{ section.settings.text_color }} !important;
    text-align: {{ section.settings.alignment }};
      display: flex;
      justify-content: {% if section.settings.alignment == 'center' %} center {% elsif section.settings.alignment == 'right' %} flex-end {% else %} flex-start {% endif %};
      align-items: {% if section.settings.alignment == 'center' %} center {% elsif section.settings.alignment == 'right' %} flex-end {% else %}  flex-start {% endif %};
      flex-direction: column;
  }

  #shopify-section-{{ section.id }} #bggrid3slidmobx   .bggrid3slidmobx_wrapper_item_title {
      text-transform: uppercase;
      margin: 0;
      margin-bottom: 40px ;
      font-size: 30px;
      font-weight: 600;
    color: {{ section.settings.text_color }} !important;
    text-align: {{ section.settings.alignment }};
  }

  #shopify-section-{{ section.id }} #bggrid3slidmobx  .bggrid3slidmobx_wrapper_item_subtitle {
      text-transform: uppercase;
    margin: 0;
      margin-bottom: 10px ;
      font-size: 25px;
      font-weight: 600;
    color: {{ section.settings.text_color }} !important;
    text-align: {{ section.settings.alignment }};
  }
  #shopify-section-{{ section.id }} #bggrid3slidmobx   .bggrid3slidmobx_wrapper_item_btn {
      text-decoration: none;
      color: {{ section.settings.btn_text_color }};
      display: inline-block;
      background-color: {{ section.settings.btn_bg_color }};
    margin: 0;
      margin-top: 30px;
      padding: 10px 40px;
      font-size: 14px;
      font-weight: 500;
      text-transform: uppercase;

      width: auto;
    text-align: center;
  }

  #shopify-section-{{ section.id }} #bggrid3slidmobx   .bggrid3slidmobx_wrapper_item_desc{
      font-style: normal;
      line-height: 1.5 !important;
      font-weight: 500;
      font-size: 18px;
    margin: 0;
    color: {{ section.settings.text_color }} !important;
    text-align: {{ section.settings.alignment }};
  }
  @media only screen and (max-width: 780px) {
      #shopify-section-{{ section.id }} #bggrid3slidmobx  .bggrid3slidmobx_wrapper_item_title {
      font-size: 20px;
  }

  #shopify-section-{{ section.id }} #bggrid3slidmobx  .bggrid3slidmobx_wrapper_item_subtitle {
      font-size: 16px;
  }
  #shopify-section-{{ section.id }} #bggrid3slidmobx  .bggrid3slidmobx_wrapper_item_btn {
      font-size: 12px;
  }

  #shopify-section-{{ section.id }} #bggrid3slidmobx  .bggrid3slidmobx_wrapper_item_desc{
      font-size: 14px;
  }
  #shopify-section-{{ section.id }} #bggrid3slidmobx  {
      padding: 40px 0px 40px 0px ;
  }
  }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css">

<section id="bggrid3slidmobx">
  <div class="bggrid3slidmobx_wrapper">
    <div class="swiper swiper-bggrid3slidmobx">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="bggrid3slidmobx_wrapper_item">
              {% if block.settings.sup_title != blank %}
                <h2 class="bggrid3slidmobx_wrapper_item_title">{{ block.settings.sup_title }}</h2>
              {% endif %}
              {% if block.settings.title != blank %}
                <h3 class="bggrid3slidmobx_wrapper_item_subtitle">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.description != blank %}
                <p class="bggrid3slidmobx_wrapper_item_desc">{{ block.settings.description }}</p>
              {% endif %}
              {% if block.settings.link_label != blank %}
                <a href="{{ block.settings.link_url }}" class="bggrid3slidmobx_wrapper_item_btn">
                  {{- block.settings.link_label -}}
                </a>
              {%- endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
<script>
  const bggrid3slidmobxslider = () => {
      new Swiper('#shopify-section-{{ section.id }} .swiper-bggrid3slidmobx', {
          slidesPerView: 1,
          spaceBetween: 20,
          breakpoints: {
              320: {
                  slidesPerView: 1.2,
                  spaceBetween: 20
              },
              640: {
                  slidesPerView: 2.2,
                  spaceBetween: 40
              },
              1000: {
                  slidesPerView: 3,
                  spaceBetween: 40
              }
          }
      });
  }
  bggrid3slidmobxslider();
</script>

{% schema %}
  {
    "name": "GTitle 2 Img Text",
    "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
          {
            "type": "text",
            "id": "sup_title",
            "label": "Sup Titre",
            "default":"Lorem ipsum"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Titre",
            "default":"Lorem ipsum"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Description"
          },
          {
            "type": "url",
            "id": "link_url",
            "label": "Lien bouton"
          },
          {
            "type": "text",
            "id": "link_label",
            "label": "libelle Bouton",
            "default":"Voir"
          }
      ]
    }
  ],
    "settings": [
      {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Image fond"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur de texte",
      "default": "#fff"
    },
      {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Couleur fond bouton",
      "default": "#f9f9f9"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Couleur texte bouton",
      "default": "#000"
    },
      {
        "type": "number",
        "id": "blue_card",
        "label": "Blur Card",
        "default": 10
      },
      {
        "type": "select",
        "id": "alignment",
        "label": "Alignment",
        "options": [
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          },
          {
            "value": "left",
            "label": "Left"
          }
        ],
        "default": "center"
      }
    ],
  "presets": [
  {
    "name": "GTitl 2 Img Text"
  }
]
  }
