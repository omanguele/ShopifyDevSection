<style>
  @import url('https://fonts.googleapis.com/css2?family=Anton&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap');

  #shopify-section-{{ section.id }} #cardslidercbo9823 {
      width: 100%;
      height: 100%;
      position: relative;
      font-family: 'Ubuntu', sans-serif;
      background-color: {{ section.settings.bg_color }};
      font-weight: 400;
      font-style: normal;
      font-size: 24px;
      letter-spacing: 0.06rem;
      line-height: 1.8;
      overflow: hidden;
  }

  #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_container {
      max-width: {% if section.settings.full_with %} 100% {% else %} {{ section.settings.max_width }}px {% endif %};
      width: 100%;
    padding: {{ section.settings.mobile_top_spacing }}px 0 {{ section.settings.mobile_bottom_spacing }}px {{ section.settings.mobile_right_spacing }}px;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: flex-start;
      overflow: hidden;
  }

  #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_card {
      min-height: 329px;
      margin-bottom: 30px;
      min-width: unset;
      margin-right: {{ section.settings.mobile_right_spacing }}px;
      max-height: unset;
      display: flex;
      border: 1px solid {{ section.settings.card_border_color }};
      border-radius: 15px;
      padding: 14px 15px 25px 20px;
      height: auto;
      justify-content: space-between;
      flex-direction: column;
  }

  #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_card_text {
      margin-bottom: 12px;
      width: 100%;
      flex-direction: column;
      display: flex;
  }

  #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_title {
      font-size: 45px;
      line-height: 55px;
      font-family: 'Anton', sans-serif;
      text-transform: uppercase;
      font-style: normal;
      font-weight: 400;
      word-break: break-word;
  }

  #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_title.card {
      color: {{ section.settings.card_heading_color }};
  }

  #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_title.slide {
      color: {{ section.settings.slide_heading_color }};
      font-size: 40px;
      margin-bottom: 14px;
      line-height: 38px;
  }

  #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_text {
      font-style: normal;
      font-weight: 400;
      font-size: 16px;
      line-height: 20px;
      margin: 0;
      font-family: 'Ubuntu', sans-serif;
  }

  #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_text.card {
      color: {{ section.settings.card_text_color }};
  }

  #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_text.slide{
      color: {{ section.settings.slide_text_color }} !important;
      max-width: 270px;
  }

  #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_btn {
      display: flex;
      align-items: center;
      border-radius: 40px;
      font-size: 16px;
      line-height: 18px;
      padding: 24px 36px;
      font-weight: 400;
      text-align: center;
      height: 66px;
      width: fit-content;
      color: {{ section.settings.btn_text_color }};
      white-space: nowrap;
      cursor: pointer;
      border: 1px solid {{ section.settings.btn_border_color }};
      font-family: 'Ubuntu', sans-serif;
      text-decoration: none;
      background-color: {{ section.settings.btn_bg_color }};
  }

  #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_btn:hover {
      background-color: {{ section.settings.hover_btn_bg_color }};
      color: {{ section.settings.hover_btn_text_color }};
      border: 1px solid {{ section.settings.hover_btn_border_color }};
  }

  #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_slider {
      position: relative;
      width: 100%;
  }

  #shopify-section-{{ section.id }} #cardslidercbo9823  .swiper {
      width: 100%;
      height: 100%;
      padding-right: {{ section.settings.mobile_right_spacing }}px !important;
  }
  #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_slide {
      background-repeat: no-repeat !important;
      background-position: center !important;
      background-size: cover !important;
      font-style: normal;
      font-weight: 400;
      font-size: 16px;
      line-height: 20px;
      margin: 0;
      padding: 20px 21px;
      height: 100%;
      width: 100%;
      text-decoration: none;
      display: flex;
      flex-direction: column;
      min-height: 380px;
  }
  @media only screen and (min-width: 1024px) {
    #shopify-section-{{ section.id }} #cardslidercbo9823  .swiper {
      padding-right: {{ section.settings.desktop_right_spacing }}px !important;
  }
      #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_container {
          flex-direction: row;
          align-items: stretch;
          padding: {{ section.settings.desktop_top_spacing }}px 0 {{ section.settings.desktop_bottom_spacing }}px {{ section.settings.desktop_right_spacing }}px;
        max-width: {% if section.settings.full_with %} 100% {% else %} {{ section.settings.max_width }}px {% endif %};
      }
      #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_card {
          margin-bottom: 0;
          margin-right: {{ section.settings.desktop_right_spacing }}px;
          min-width: 391px;
          max-width: 391px;
      }
      #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_title.card {
          font-size: calc(45px + .025*(100vw - 440px));
          line-height: calc(55px + .029*(100vw - 440px));
      }
      #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_title.slide {
          font-size: calc(38px + .012*(100vw - 440px));
          line-height: calc(38px + .012*(100vw - 440px));
      }
      #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_slider {
          position: relative;
          width: calc(100% - 406px);
      }
  }
  @media only screen and (min-width: 1440px) {
      #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_title.card {
          font-size: 70px;
          line-height: 84px;
      }
      #shopify-section-{{ section.id }} #cardslidercbo9823  .cardslidercbo9823_title.slide {
          font-size: 50px;
          line-height: 50px;
      }
  }
</style>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"
>

<section id="cardslidercbo9823">
  <div class="cardslidercbo9823_container">
    <div class="cardslidercbo9823_card">
      <div class="cardslidercbo9823_card_text">
        <h1 class="cardslidercbo9823_title card">{{ section.settings.heading }}</h1>
        <p class="cardslidercbo9823_text card">
          {{ section.settings.description }}
        </p>
      </div>
      <a href="{{ section.settings.url_btn }}" class="cardslidercbo9823_btn">{{ section.settings.lbl_btn }}</a>
    </div>
    <div class="cardslidercbo9823_slider">
      <div class="swiper cardslidercbo9823-swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <a
                href="{{ block.settings.url }}"
                class="cardslidercbo9823_slide"
                style='background: url("{{ block.settings.image | img_url: "master" }}");'
              >
                <h2 class="cardslidercbo9823_title slide">{{ block.settings.heading }}</h2>
                <div class="cardslidercbo9823_text slide">
                  {{ block.settings.description }}
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
<script>
  new Swiper('.cardslidercbo9823-swiper', {
      slidesPerView: 1.2,
      spaceBetween: 15,

      breakpoints: {
          320: {
              slidesPerView: 1.2,
              spaceBetween: 15
          },
          540: {
              slidesPerView: 1.5,
              spaceBetween: 15
          },
          670: {
              slidesPerView: 2,
              spaceBetween: 15
          },
          720: {
              slidesPerView: 2.2,
              spaceBetween: 15
          },
          782: {
              slidesPerView: 2.5,
              spaceBetween: 15
          },
          979: {
              slidesPerView: 3,
              spaceBetween: 15
          },
          1024: {
              slidesPerView: 1.3,
              spaceBetween: 20
          },
          1120: {
              slidesPerView: 1.5,
              spaceBetween: 20
          },
          1296: {
              slidesPerView: 2,
              spaceBetween: 20
          },
          1500: {
              slidesPerView: 2.3,
              spaceBetween: 20
          },
          1600: {
              slidesPerView: 2.5,
              spaceBetween: 20
          },
          1700: {
              slidesPerView: 3.5,
              spaceBetween: 20
          }
      }
  });
</script>

