#shopify-section-{{ section.id }} #quizz060323  .container_modal_quizz.open {
    opacity: 1;
    visibility: visible;
    z-index: 50;
}

#shopify-section-{{ section.id }} #quizz060323  .container_modal_quizz .modal_quizz {
    width: 90%;
