                                    <label for="{{ forloop.index }}">
                                        <img src="{{ block.settings.image | img_url:"master" }}" alt="">
                                    </label>
                                    <p class="libelle">{{ block.settings.text }}</p>
                                </div>
                          {% endif %}
                          {% endfor %}
                        </div>
                    </div>

                    <div id="step_2" class="step">
                        <h3 class="question">{{ section.settings.title-step-2 }}</h3>
                        <div class="container_text_answer">
                          {% for block in section.blocks %}
                              {% if block.type == 'step-2' %}
                                {%- assign product1 = block.settings.product-1 -%}
                                {%- assign product2 = block.settings.product-2 -%}
                                <div class="text_answer answer">
                                    <input type="radio" name="{{ block.type }}" value="{{ product1.id  }},{{ product2.id  }}" id="{{ forloop.index }}">
                                    <label for="{{ forloop.index }}">
                                        {{ block.settings.text }}
                                    </label>
                                </div>
