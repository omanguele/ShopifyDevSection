<style>
  #mission-20230106 .pvu--2 {
    padding-top: 30px;
    padding-bottom: 30px;
  }
  @media screen and (min-width: 768px) {
    #mission-20230106 .pvu--2 {
      padding-top: 50px;
      padding-bottom: 50px;
    }
  }
  #mission-20230106 .square-collection-home--container {
    padding-bottom: 45px !important;
  }
  #mission-20230106 .square-collection-home--container.border-bottom {
    border-bottom: 1px solid #dbdbdb;
  }
  #mission-20230106 .page__width-2 {
    max-width: 1500px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 100px;
    width: 100%;
  }
  @media screen and (max-width: 1300px) {
    #mission-20230106 .page__width-2 {
      padding: 0 80px;
    }
  }
  @media screen and (max-width: 1100px) {
    #mission-20230106 .page__width-2 {
      padding: 0 60px;
    }
  }
  @media screen and (max-width: 967px) {
    #mission-20230106 .page__width-2 {
      padding: 0 20px;
    }
    #mission-20230106 .square-collection-home--container .square-collection-slider {
      -moz-column-gap: 20px !important;
      column-gap: 20px !important;
    }
  }
  #mission-20230106 .square-collection-home--container .square-collection-slider {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    -moz-column-gap: 50px;
    column-gap: 50px;
    overflow-x: scroll;
  }
  #mission-20230106 a {
    font-size: 13px;
  }
  #mission-20230106 a {
    color: inherit;
    text-decoration: none;
    transition: color 0, 25s linear;
  }
  #mission-20230106 .flex {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  #mission-20230106 .fd--column {
    flex-direction: column;
  }
  #mission-20230106 .square-collection-home--container .square-collection-slider .one-square .image-square {
    height: 100px;
    width: 100px;
    -o-object-fit: cover;
    object-fit: cover;
    transition: all 0.3s;
  }
  #mission-20230106 .body--text {
    font-size: 11px;
    letter-spacing: 1.1px;
  }
  #mission-20230106 .fw--700 {
    font-weight: 700;
  }
  #mission-20230106 .text__uppercase {
    text-transform: uppercase;
  }
  #mission-20230106 .mv--15 {
    margin-top: 15px;
    margin-bottom: 15px;
  }
  #mission-20230106 .pv--5 {
    padding-top: 5px;
    padding-bottom: 5px;
  }
  #mission-20230106 .ph--10 {
    padding-right: 14px;
    padding-left: 14px;
  }
  #mission-20230106 .margin__bottom--none {
    margin-bottom: 0 !important;
  }
  #mission-20230106 .square-collection-home--container .square-collection-slider .one-square .title-square {
    width: 100px;
  }
  #mission-20230106 .square-collection-home--container .square-collection-slider::-webkit-scrollbar {
    display: none;
  }
</style>
<section id="mission-20230106">
  <div class="square-collection-home--container pvu--2 border-bottom" bis_skin_checked="1">
    <div class="page__width-2 square-collection-slider" bis_skin_checked="1">
      {% for block in section.blocks %}
        <div
          class="one-square"
          style="width: 100px;margin: auto;"
          bis_skin_checked="1">
          <a href="{{ block.settings.product-url }}" class="flex fd--column">
            <img
              class="image-square flex"
              sizes="100px"
              src="{{ block.settings.img | img_url:"master" }}">
            <p class="body--text fw--700 primary__color mv--15 margin__bottom--none pv--5 ph--10 title-square text__uppercase" style="color: {{ block.settings.title-color }};text-align: center;margin-top:5px;">
              {% if block.settings.titre == blank %}
                {{ block.settings.product.title }}
              {% else %}
                {{ block.settings.titre }}{% endif %}
            </p>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Products List Section",
    "blocks": [
      {
        "type": "product",
        "name": "Produit",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Produit"
          },
          {
            "type": "image_picker",
            "id": "img",
            "label": "Image",
            "info": "Taille : 100 x 100px"
          },
          {
            "type": "text",
            "id": "titre",
            "default": "KIT DECO",
            "label": "Titre du produit"
          },
          {
            "type": "color",
            "id": "title-color",
            "label": "couleur titre",
            "default": "#545454"
          }, {
            "type": "url",
            "id": "product-url",
            "label": "Lien produit",
            "default": "/"
          }
        ]
      }
    ],
    "settings": [],
    "presets": [
      {
        "name": "Products List Section",
        "category": "Custom Ss"
      }
    ]
  }
{% endschema %}