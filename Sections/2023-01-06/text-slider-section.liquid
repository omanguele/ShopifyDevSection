      {% for block in section.blocks %}
        <p class="phu--1 product--title text__uppercase text-slide" style="opacity: 1;">{{ block.settings.title }}</p>
      {% endfor %}
    </div>
    <div class="scroll-text" bis_skin_checked="1">
      {% for block in section.blocks %}
        <p class="phu--1 product--title text__uppercase text-slide" style="opacity: 1;">{{ block.settings.title }}</p>
      {% endfor %}
    </div>
  </div>
{% endif %}
