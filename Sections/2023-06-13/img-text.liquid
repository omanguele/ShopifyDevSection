<style>
  @import url('https://fonts.cdnfonts.com/css/recoleta');
  @import url('https://fonts.cdnfonts.com/css/gordita');

  #shopify-section-{{ section.id }} #imgtextsignX230613x {
      width: 100%;
      height: auto;
      font-family: 'Gordita', sans-serif;
      background-color: {{ section.settings.bg_color }};
  }
  #shopify-section-{{ section.id }} #imgtextsignX230613x  .imgtextsignX230613x_container {
      max-width: 1500px;
      margin-left: auto;
      margin-right: auto;
      padding: 0 50px;
      width: 100%;
      display: grid;
      grid-template-columns: repeat(2,calc(50% - 35px));
      column-gap: 70px;
      margin-top: 80px;
      margin-bottom: 80px;
  }
  #shopify-section-{{ section.id }} #imgtextsignX230613x  .imgtextsignX230613x_container_right {
      padding-right: 50px;
      flex-direction: column;
      align-items: flex-start;
      justify-content: center;
      display: flex;
      width: 100%;
  }
  #shopify-section-{{ section.id }} #imgtextsignX230613x  .imgtextsignX230613x_heading {
      color: {{ section.settings.heading_color }};
      font-size: 65px;
      line-height: 62px;
      font-weight: 700;
      margin-bottom: 30px;
      margin-top: 0 !important;
      font-family: 'Recoleta', sans-serif;
  }
  #shopify-section-{{ section.id }} #imgtextsignX230613x   .imgtextsignX230613x_dsscription {
      display: block;
      color: {{ section.settings.text_color }};
      letter-spacing: .26px;
      font-size: 13px;
      line-height: 23px;
      margin: 0;
      font-weight: 600;
  }
  #shopify-section-{{ section.id }} #imgtextsignX230613x   .imgtextsignX230613x_signature {
      height: 70px;
      width: auto;
      margin-top: 40px;
  }
  #shopify-section-{{ section.id }} #imgtextsignX230613x  .imgtextsignX230613x_container_left {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
  }
  #shopify-section-{{ section.id }} #imgtextsignX230613x  .imgtextsignX230613x_container_left img {
      width: 100%;
      height: 500px;
      object-fit: contain;
  }
  @media only screen and (max-width: 780px)  {
      #shopify-section-{{ section.id }} #imgtextsignX230613x  .imgtextsignX230613x_container {
          grid-template-columns: 100%;
          row-gap: 30px;
          margin-top: 50px;
          margin-bottom: 50px;
          padding: 0 20px;
      }
      #shopify-section-{{ section.id }} #imgtextsignX230613x  .imgtextsignX230613x_container_left img {
          height: auto;
      }
      #shopify-section-{{ section.id }} #imgtextsignX230613x  .imgtextsignX230613x_heading {
          margin-top: 0 !important;
          margin-bottom: 16px;
          font-size: 30px;
          line-height: 40px
      }
      #shopify-section-{{ section.id }} #imgtextsignX230613x  .imgtextsignX230613x_container_right {
          align-items: center !important;
      }
  }
</style>

<section id="imgtextsignX230613x">
  <div class="imgtextsignX230613x_container">
    <div class="imgtextsignX230613x_container_left">
      <img src="{{ section.settings.img_desc | img_url: 'master' }}" alt="">
    </div>
    <div class="imgtextsignX230613x_container_right">
      <h2 class="imgtextsignX230613x_heading">{{ section.settings.heading }}</h2>
      <span class="imgtextsignX230613x_dsscription">
        {{ section.settings.description }}
      </span>
      <img src="{{ section.settings.img_signature | img_url: 'master' }}" alt="" class="imgtextsignX230613x_signature">
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Img Text",
  "settings": [
    {
      "type":"color",
      "id":"bg_color",
      "label":"Couleur fond",
      "default":"#fff"
    },
    {
      "type":"color",
      "id":"heading_color",
      "label":"Couleur titre",
      "default":"#202020"
    },
    {
      "type":"color",
      "id":"text_color",
      "label":"Couleur texte",
      "default":"#202020"
    },
    {
      "type":"text",
      "id":"heading",
      "label":"Titre",
      "default":"Your body is magic !"
    },
    {
      "type":"richtext",
      "id":"description",
      "label":"Description"
    },
    {
      "type":"image_picker",
      "id":"img_desc",
      "label":"Image Descriptive"
    },
    {
      "type":"image_picker",
      "id":"img_signature",
      "label":"Image Signature"
    }
  ],
  "presets": [
    {
      "name": "Img Text"
    }
  ]
}
{% endschema %}
