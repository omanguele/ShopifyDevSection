<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css">
<style>
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x  {
      background-color: {{ section.settings.bg_color }};
      width: 100%;
      height: auto;
      padding: 0 !important;
      overflow: hidden;
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x * {
    line-height: normal;
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x  img {
      max-width: 100%;
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x   .imagetextsliderb230613x_container {
      width: 100%;
      padding: 30px 0;
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x    .imagetextsliderb230613x_header {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      padding: 20px;
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x   .imagetextsliderb230613x_heading {
      text-align: center;
      line-height: 1.4;
      font-size: 45px;
      margin-bottom: 10px;
    color: {{ section.settings.heading_color }};
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x    .imagetextsliderb230613x_subheading {
      line-height: 1.42857143;
      text-align: center;
      font-size: 23px;
    color: {{ section.settings.subheading_color }};
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x   .imagetextsliderb230613x_icon_container {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 100px;
      padding: 40px 20px 20px 20px;
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x   .imagetextsliderb230613x_icon_container_item {
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 20px;
      font-weight: 600;
      flex-direction: row;
      gap: 10px;
    color: {{ section.settings.text_color }};
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x   .imagetextsliderb230613x_icon_container_item img {
      height: 60px;
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x   .imagetextsliderb230613x_imgdesc {
    max-height: 300px;
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x  .swiper {
      width: 100%;
      height: 100%;
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x  .swiper-slide {
      border-radius: 30px !important;
      overflow: hidden !important;
      max-height: 250px;

  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x  .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x  .swiper-pagination {
      position: fixed;
      bottom: -20px !important;
      display: none !important;
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x  .ctn_myswiper {
      width: 100%;
      height: auto;
      will-change: transform;
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x  .swiper-pagination-bullet{
      background-color: {{ section.settings.dot_color }} !important;
  }
  #shopify-section-{{ section.id }}  #imagetextsliderb230613x  .swiper-pagination-bullet-active{
      background-color: {{ section.settings.active_dot_color }}  !important;
  }

  @media only screen and (max-width: 780px)  {
      #shopify-section-{{ section.id }}  #imagetextsliderb230613x   .swiper-pagination {
          display: inherit !important;
      }
      #shopify-section-{{ section.id }}  #imagetextsliderb230613x  .swiper-slide {
          height: 220px !important;
          border-radius: 10px !important;
      }
      #shopify-section-{{ section.id }}  #imagetextsliderb230613x  .imagetextsliderb230613x_icon_container {
          display: flex;
          justify-content: center;
          align-items: center;
          gap: 50px;
          padding: 15px 20px 20px 20px;
      }
      #shopify-section-{{ section.id }}  #imagetextsliderb230613x   .imagetextsliderb230613x_icon_container_item {
          flex-direction: column;
          text-align: center;
          font-size: 10px;
          gap: 5px;
      }
      #shopify-section-{{ section.id }}  #imagetextsliderb230613x   .imagetextsliderb230613x_icon_container_item img {
          height: 30px;
      }
      #shopify-section-{{ section.id }}  #imagetextsliderb230613x   .imagetextsliderb230613x_heading {
          font-size: 20px;
      }
      #shopify-section-{{ section.id }}  #imagetextsliderb230613x  .imagetextsliderb230613x_subheading {
          font-size: 14px;
      }
      }
</style>

<section id="imagetextsliderb230613x">
  <div class="imagetextsliderb230613x_container">
    <div class="imagetextsliderb230613x_header">
      <h2 class="imagetextsliderb230613x_heading">{{ section.settings.heading }}</h2>
      <p class="imagetextsliderb230613x_subheading">{{ section.settings.subheading }}</p>
      <div class="imagetextsliderb230613x_icon_container">
        <div class="imagetextsliderb230613x_icon_container_item">
          <img src="{{ section.settings.icon_1 | img_url: "master" }}" alt="">
          <p>{{ section.settings.text_icon_1 }}</p>
        </div>
        <div class="imagetextsliderb230613x_icon_container_item">
          <img src="{{ section.settings.icon_2 | img_url: "master" }}" alt="">
          <p>{{ section.settings.text_icon_2 }}</p>
        </div>
      </div>
      <img src="{{ section.settings.image_desc | img_url: "master" }}" alt="" class="imagetextsliderb230613x_imgdesc">
    </div>
    <div class="ctn_myswiper">
      <div class="swiper mySwiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <img src="{{ block.settings.image | img_url: "master" }}" alt="">
            </div>
          {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </div>
  </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
<script>
  var swiper = new Swiper(".mySwiper", {
        loop: true,
        autoplay: {
            delay: 2000,
            disableOnInteraction: false,
        },
        centeredSlides: true,
        pagination: {
            el: '.swiper-pagination',
        },
        breakpoints: {
            320: {
            slidesPerView: 1.5,
            spaceBetween: 10
            },
            780: {
            slidesPerView: 3,
            spaceBetween: 20
            },
            1200: {
            slidesPerView: 3,
            spaceBetween: 30
            },
        }
  });
</script>

{% schema %}
{
  "name": "Image Text Slide",
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type":"image_picker",
          "id":"image",
          "label":"Image"
        }
      ]
    }
  ],
  "settings": [
    {
      "type":"color",
      "id":"bg_color",
      "label":"Couleur fond",
      "default":"#fff"
    },
    {
      "type":"color",
      "id":"heading_color",
      "label":"Couleur titre",
      "default":"#000"
    },
    {
      "type":"color",
      "id":"text_color",
      "label":"Couleur texte",
      "default":"#000"
    },
    {
      "type":"color",
      "id":"subheading_color",
      "label":"Couleur sous titre",
      "default":"#000"
    },
    {
      "type":"color",
      "id":"dot_color",
      "label":"Couleur dot",
      "default":"#f5f5f5"
    },
    {
      "type":"color",
      "id":"active_dot_color",
      "label":"Couleur dot actif",
      "default":"#000"
    },
    {
      "type":"text",
      "id":"heading",
      "label":"Titre",
      "default":"FPV Camera to Capture Endless Views"
    },
    {
      "type":"text",
      "id":"subheading",
      "label":"Sous Titre",
      "default":"Simplify your creativity among the clouds and put amazing shots within reach."
    },
    {
      "type":"image_picker",
      "id":"icon_1",
      "label":"Icone 1"
    },
    {
      "type":"text",
      "id":"text_icon_1",
      "label":"Texte Icone 1",
      "default":"1080P Camera"
    },
    {
      "type":"image_picker",
      "id":"icon_2",
      "label":"Icone 2"
    },
    {
      "type":"text",
      "id":"text_icon_2",
      "label":"Texte Icone 2",
      "default":"1080P Camera"
    },
    {
      "type":"image_picker",
      "id":"image_desc",
      "label":"Image descriptive"
    }
  ],
  "presets": [
    {
      "name": "Image Text Slide"
    }
  ]
}
{% endschema %}
