  "name": "Slide Collection",
  "settings": [
    {
      "type":"color",
      "id":"bg_color",
      "label":"Couleur fond",
      "default":"#fff"
    },
    {
      "type":"color",
      "id":"heading_color",
      "label":"Couleur titre",
      "default":"#202020"
    },
    {
      "type":"color",
      "id":"text_color",
      "label":"Couleur texte",
      "default":"#fff"
    },
    {
      "type":"color",
      "id":"link_color",
      "label":"Couleur lien",
      "default":"#202020"
    },
    {
      "type":"color",
      "id":"hover_link_color",
      "label":"Couleur lien survol",
      "default":"#202020"
    },
    {
      "type":"text",
