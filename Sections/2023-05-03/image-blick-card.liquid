<section id="imgridh">
  <div class="top_image">
    <img src="{{ section.settings.top_image | img_url: "master" }}" alt="">
  </div>
  <div class="container">
    <div class="ctn_sect_title">
      <h2 class="sect_title">
        {{ section.settings.title_section }}
      </h2>
    </div>
    <div class="card">
      <div class="content">
        <h4 class="content_title">{{ section.settings.title_card }}</h4>
        <p class="content_desc">
          {{ section.settings.desc_card }}
        </p>
        <div class="wrapper">
          <div class="wrap_container">
            {% for block in section.blocks %}
              {% assign ispair = forloop.index | modulo: 2 %}
              {% if ispair != 0 %}
                <div class="wrap_item">
                  <div class="item_icon">
                    <img src="{{ block.settings.ico_image | img_url: "master" }}" alt="">
                  </div>
                  <h4 class="item_title">{{ block.settings.title }}</h4>
                  <p class="item_desc" style="color:{{ block.settings.desc_color }} !important">
                    {{ block.settings.description }}
                  </p>
                </div>
              {% endif %}
            {% endfor %}
          </div>
          <div class="wrap_container">
            {% for block in section.blocks %}
              {% assign ispair = forloop.index | modulo: 2 %}
              {% if ispair == 0 %}
                <div class="wrap_item">
                  <div class="item_icon">
                    <img src="{{ block.settings.ico_image | img_url: "master" }}" alt="">
                  </div>
                  <h4 class="item_title">{{ block.settings.title }}</h4>
                  <p class="item_desc" style="color:{{ block.settings.desc_color }} !important">
                    {{ block.settings.description }}
                  </p>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        <p class="b_text_desc" style="margin-top: 20px !important;">
          <span style="font-weight: 700;">Total :</span>
          {{ section.settings.total_text }}
        </p>
        <p class="b_text_desc">
          <span style="font-weight: 700;">Bonus :</span>
          {{ section.settings.bonus_text }}
        </p>
        <a href="{{ section.settings.btn_url }}" type="button" class="action_btn">{{ section.settings.btn_label }}</a>
      </div>
      <div class="foot">
        <p class="b_text_desc">
          {{ section.settings.btn_desc }}
        </p>
        <div class="rate_card">
          <img src="{{ section.settings.star_image | img_url: "master" }}" alt="" class="star_image">
          <p class="testimanial_text">{{ section.settings.rate_text }}</p>
          <img src="{{ section.settings.star_people_image | img_url: "master" }}" alt="" class="testimonial_image">
        </div>
        <div class="guarate_card">
          <div class="guarate_card_text">
            <h5 class="guarate_card_text_title">{{ section.settings.guarante_title }}</h5>
            <p class="guarate_card_text_desc">{{ section.settings.guarante_desc }}</p>
          </div>
          <div class="guarate_card_img">
            <img src="{{ section.settings.guarante_image | img_url: "master" }}" alt="">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

