<style>
   #shopify-section-{{ section.id }} #titleimgcard  {
      width: 100%;
      position: relative;
      background-color: {{ section.settings.bg_color }} !important;
      overflow: hidden;
  }
   #shopify-section-{{ section.id }} #titleimgcard  .container {
      max-width: 800px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 40px 0 0 0;
  }
   #shopify-section-{{ section.id }} #titleimgcard    .wrap_block {
      display: flex;
      align-items: center;
      flex-direction: row;
      width: 100%;
      gap: 30px;
      margin-top: 50px;
  }
   #shopify-section-{{ section.id }} #titleimgcard    .block {
      display: block;
      width: 50%;
      padding: 40px;
      text-align: left;
      font-size: 14px !important;
      line-height: 1.2em !important;
      letter-spacing: .1px !important;
  }
   #shopify-section-{{ section.id }} #titleimgcard    .image_desc {
      max-width: 100%;
      margin-top: 50px;
  }
   #shopify-section-{{ section.id }} #titleimgcard    .title{
      font-size: 50px !important;
      line-height: .9em !important;
      letter-spacing: -.6px !important;
      text-transform: none !important;
      color: {{ section.settings.title_color }};
      padding-left: 120px !important;
      padding-right: 120px !important;
      text-align: center;
      font-weight: 700;
  }
  @media only screen and (max-width: 780px) {
       #shopify-section-{{ section.id }} #titleimgcard  .wrap_block {
      flex-direction: column;
      max-width: 70%;
      gap: 20px;
  }
   #shopify-section-{{ section.id }} #titleimgcard   .container {
      padding: 40;
  }
   #shopify-section-{{ section.id }} #titleimgcard    .block {
      width: 100%;
      padding: 40px;
      font-size: 13px !important;
  }
   #shopify-section-{{ section.id }} #titleimgcard    .image_desc {
      max-width: auto;
  }
   #shopify-section-{{ section.id }} #titleimgcard   .title{
      font-size: 35px !important;
      padding: 0 !important;
      max-width: 70%;
      line-height: 1.1em !important;
      letter-spacing: -.6px !important;
  }
  }
</style>

<section id="titleimgcard">
  <div class="container">
    <h2 class="title">
      {{ section.settings.title }}
    </h2>
    <div class="wrap_block">
      <span
        class="block"
        style="background: {{ section.settings.card1_bg_color }}; color: {{ section.settings.card1_text_color }};"
      >
        {{ section.settings.card1_content }}
      </span>
      <span
        class="block"
        style="background: {{ section.settings.card2_bg_color }}; color: {{ section.settings.card2_text_color }};"
      >
        {{ section.settings.card2_content }}
      </span>
    </div>
    <img src="{{ section.settings.image | img_url: "master" }}" alt="" class="image_desc">
  </div>
</section>

{% schema %}
{
  "name": "Title card Image",
  "settings": [
    {
      "type": "color_background",
      "id": "bg_color",
      "label": "Couleur de fond",
      "default": "#fff"
    },
    {
      "type": "color_background",
      "id": "card1_bg_color",
      "label": "Couleur fond carte 1",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "card1_text_color",
      "label": "Couleur texte carte 1",
      "default": "#000"
    },
    {
      "type": "color_background",
      "id": "card2_bg_color",
      "label": "Couleur fond carte 2",
      "default": "linear-gradient(150deg,rgba(103,23,205,1) 0%,rgba(0,0,0,1) 100%)"
    },
    {
      "type": "color",
      "id": "card2_text_color",
      "label": "Couleur texte carte 2",
      "default": "#fff"
    },
    {
      "type": "color_background",
      "id": "title_color",
      "label": "Couleur de texte",
      "default": "#000"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titre section",
      "default":"lorem ipsum..."
    },
    {
      "type": "richtext",
      "id": "card1_content",
      "label": "Contenu Carte 1"
    },
    {
      "type": "richtext",
      "id": "card2_content",
      "label": "Contenu Carte 2"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image descriptive"
    }
  ],
"presets": [
{
  "name": "Title card Image"
}
]
}
{% endschema %}
