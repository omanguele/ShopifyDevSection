<style>
  #custicontext {
             background: {{ section.settings.bg_color }};
             color: {{ section.settings.text_color }} !important;
             width: 100%;
             padding: 40px 20px;
         }
         #custicontext  .wrapper {
             width: 100%;
             display: flex;
             gap: 20px;
             flex-wrap: wrap;
             align-items: flex-start;
             justify-content: center;
             max-width: 1200px;
         }
         #custicontext .wrap_item {
             max-width: 45%;
             width: 100%;
             display: flex;
             flex-direction: column;
             justify-content: center;
             align-items: center;
             text-align: center;
         }

         #custicontext  .wrap_item:last-child {
             max-width: 100%;
         }

         #custicontext  .wrap_item .wrap_item_icon {
             width: 100%;
         }
         #custicontext  .wrap_item .wrap_item_icon img {
             max-width: 100%;
         }
         #custicontext  .wrap_item_title {
             text-transform: uppercase;
             font-size: 14px;
             font-weight: 700;
             margin-top: 10px;
           color: {{ section.settings.title_color }} !important;
         }
         #custicontext  .wrap_item_desc {
             font-size: 12px;
             font-weight: 500;
             margin-top: 5px;
           color: {{ section.settings.text_color }} !important;
         }
         @media only screen and (min-width: 1000px) {
             #custicontext    .wrap_item {
                 max-width: 20%;
             }
             #custicontext    .wrapper {
                 justify-content: space-between;
             }
             #custicontext    .wrap_item:last-child {
                 max-width: 20%;
             }
         }
</style>

<section id="custicontext">
  <div class="wrapper">
    {%- for block in section.blocks -%}
      <div class="wrap_item">
        <div class="wrap_item_icon">
          <img src="{{ block.settings.image | img_url: "master" }}" alt="">
        </div>
        <h4 class="wrap_item_title">{{ block.settings.heading }}</h4>
        <p class="wrap_item_desc">
          {{ block.settings.subheading }}
        </p>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Enc Icon Text",
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image de l'ic√¥ne",
          "info": "180 x 180px .png recommended"
        },
		{
          "type": "text",
          "id": "heading",
          "label": "Titre"
		},
        {
          "type": "textarea",
          "id": "subheading",
          "label": "Texte"
		}
      ]
    }
  ],
  "settings": [
     {
       "type": "color",
      "id": "bg_color",
      "label": "Couleur du fond de la section",
      "default": "#fff"
    },
    { "type": "color",
      "id": "title_color",
      "label": "Couleur des titres",
      "default": "#000"
    },
	{
      "type": "color",
      "id": "text_color",
      "label": "Couleur des textes",
      "default": "#000"
    }
  ],
  "presets": [
    {
      "name": "Enc Icon Text"
    }
  ]
}
{% endschema %}
